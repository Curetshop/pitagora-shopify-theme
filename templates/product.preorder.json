        "early_bird": {
          "type": "feature",
          "settings": {
            "icon": "percent",
            "text": "Descuento especial por pre-orden"
          }
        },
        "delivery_date": {
          "type": "feature",
          "settings": {
            "icon": "calendar",
            "text": "Entrega estimada: [Fecha]"
          }
        },
        "reserve_now": {
          "type": "feature",
          "settings": {
            "icon": "lock",
            "text": "Reserva ahora, paga después"
          }
