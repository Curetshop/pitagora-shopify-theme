          }
        },
        "preorder_terms": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Términos de pre-orden",
            "content": "<p>Al realizar una pre-orden, aceptas nuestros términos y condiciones específicos para productos en pre-venta.</p>"
          }
        }
      },
      "block_order": [
        "preorder_badge",
        "early_bird", 
        "delivery_date",
        "reserve_now",
        "preorder_info",
        "whats_included",
        "preorder_terms"
      ]
