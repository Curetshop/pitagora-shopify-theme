{
  "sections": {
    "main": {
      "type": "main-product",
      "settings": {
        "layout": "grid",
        "media_aspect_ratio": "adapt",
        "media_layout": "slider",
        "enable_zoom": true,
        "hide_variants": true,
        "show_vendor": true,
        "show_dynamic_checkout": true,
        "enable_reviews": true,
        "enable_social_sharing": true,
        "show_product_features": true,
        "show_additional_info": true,
        "update_url": true
      },
      "blocks": {
        "shipping_feature": {
          "type": "feature",
          "settings": {
            "icon": "truck",
            "text": "Envío gratis en pedidos superiores a $75"
          }
        },
        "warranty_feature": {
          "type": "feature",
          "settings": {
            "icon": "shield",
            "text": "Garantía de 1 año"
          }
        },
        "return_feature": {
          "type": "feature", 
          "settings": {
            "icon": "return",
            "text": "Devoluciones gratuitas"
          }
        },
        "description_tab": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Descripción",
            "content": "<p>Información detallada del producto</p>"
          }
        },
        "shipping_tab": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Envío y devoluciones",
            "content": "<p>Información sobre envíos y políticas de devolución</p>"
          }
        },
        "care_tab": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Cuidado del producto",
            "content": "<p>Instrucciones de cuidado y mantenimiento</p>"
          }
        }
      },
      "block_order": [
        "shipping_feature",
        "warranty_feature", 
        "return_feature",
        "description_tab",
        "shipping_tab",
        "care_tab"
      ]
    },
    "product-recommendations": {
      "type": "product-recommendations",
      "settings": {
        "heading": "También te puede gustar",
        "products_to_show": 4,
        "columns": 4,
        "show_quick_add": true,
        "enable_quick_view": true
      }
    },
    "recently-viewed": {
      "type": "recently-viewed-products",
      "settings": {
        "heading": "Productos vistos recientemente",
        "products_to_show": 4,
        "columns": 4
      }
    }
  },
  "order": [
    "main",
    "product-recommendations", 
    "recently-viewed"
  ]
}