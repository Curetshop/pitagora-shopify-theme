{
  "sections": {
    "main": {
      "type": "main-product",
      "settings": {
        "layout": "list",
        "media_aspect_ratio": "portrait",
        "media_layout": "thumbnails",
        "enable_zoom": true,
        "hide_variants": false,
        "show_vendor": true,
        "show_dynamic_checkout": true,
        "enable_reviews": true,
        "enable_social_sharing": true,
        "show_product_features": true,
        "show_additional_info": true,
        "update_url": true
      },
      "blocks": {
        "featured_badge": {
          "type": "feature",
          "settings": {
            "icon": "star",
            "text": "Producto Destacado"
          }
        },
        "premium_shipping": {
          "type": "feature",
          "settings": {
            "icon": "fast-delivery",
            "text": "Envío express gratuito"
          }
        },
        "exclusive_warranty": {
          "type": "feature",
          "settings": {
            "icon": "premium",
            "text": "Garantía extendida de 2 años"
          }
        },
        "vip_support": {
          "type": "feature",
          "settings": {
            "icon": "headphones",
            "text": "Soporte VIP 24/7"
          }
        },
        "detailed_description": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Descripción detallada",
            "content": "<p>Descripción completa y detallada del producto destacado con todas sus características premium.</p>"
          }
        },
        "technical_specs": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Especificaciones técnicas",
            "content": "<p>Especificaciones técnicas completas del producto.</p>"
          }
        },
        "premium_care": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Cuidado premium",
            "content": "<p>Instrucciones especiales de cuidado para productos premium.</p>"
          }
        },
        "authenticity": {
          "type": "collapsible_tab",
          "settings": {
            "heading": "Certificado de autenticidad",
            "content": "<p>Información sobre la autenticidad y certificaciones del producto.</p>"
          }
        }
      },
      "block_order": [
        "featured_badge",
        "premium_shipping",
        "exclusive_warranty",
        "vip_support",
        "detailed_description",
        "technical_specs",
        "premium_care",
        "authenticity"
      ]
    },
    "featured-trust-badges": {
      "type": "trust-badges",
      "settings": {
        "heading": "Compra con confianza",
        "show_security": true,
        "show_shipping": true,
        "show_warranty": true,
        "show_reviews": true
      }
    },
    "product-recommendations": {
      "type": "product-recommendations", 
      "settings": {
        "heading": "Productos premium relacionados",
        "products_to_show": 6,
        "columns": 3,
        "show_quick_add": true,
        "enable_quick_view": true,
        "filter_by": "featured"
      }
    }
  },
  "order": [
    "main",
    "featured-trust-badges",
    "product-recommendations"
  ]
}