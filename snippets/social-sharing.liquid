{%- comment -%}
Social Sharing Component
Share buttons for social media platforms
{%- endcomment -%}

{%- liquid
  assign share_url = shop.url | append: share_permalink
  assign encoded_url = share_url | url_encode
  assign encoded_title = share_title | url_encode
  assign encoded_description = share_description | default: shop.description | url_encode
  assign image_url = share_image | image_url: width: 1200 | prepend: 'https:'
-%}

<div class="social-sharing">
  <div class="social-sharing__buttons">
    <a 
      href="https://www.facebook.com/sharer/sharer.php?u={{ encoded_url }}"
      class="social-sharing__button social-sharing__button--facebook"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="{{ 'general.social.share_on_facebook' | t }}"
    >
      <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" fill="currentColor"/>
      </svg>
      <span class="visually-hidden">{{ 'general.social.facebook' | t }}</span>
    </a>

    <a 
      href="https://twitter.com/intent/tweet?url={{ encoded_url }}&text={{ encoded_title }}"
      class="social-sharing__button social-sharing__button--twitter"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="{{ 'general.social.share_on_twitter' | t }}"
    >
      <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z" fill="currentColor"/>
      </svg>
      <span class="visually-hidden">{{ 'general.social.twitter' | t }}</span>
    </a>

    <a 
      href="https://www.pinterest.com/pin/create/button/?url={{ encoded_url }}&description={{ encoded_title }}&media={{ image_url }}"
      class="social-sharing__button social-sharing__button--pinterest"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="{{ 'general.social.share_on_pinterest' | t }}"
    >
      <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M12.017 0C5.396 0 .029 5.367.029 11.987c0 5.079 3.158 9.417 7.618 11.174-.105-.949-.199-2.403.041-3.439.219-.937 1.406-5.957 1.406-5.957s-.359-.72-.359-1.781c0-1.663.967-2.911 2.168-2.911 1.024 0 1.518.769 1.518 1.688 0 1.029-.653 2.567-.992 3.992-.285 1.193.6 2.165 1.775 2.165 2.128 0 3.768-2.245 3.768-5.487 0-2.861-2.063-4.869-5.008-4.869-3.41 0-5.409 2.562-5.409 5.199 0 1.033.394 2.143.889 2.741.097.118.112.223.085.345-.09.375-.293 1.199-.334 1.363-.053.225-.172.271-.402.165-1.495-.69-2.433-2.878-2.433-4.646 0-3.776 2.748-7.252 7.92-7.252 4.158 0 7.392 2.967 7.392 6.923 0 4.135-2.607 7.462-6.233 7.462-1.214 0-2.357-.629-2.758-1.378l-.749 2.848c-.269 1.045-1.004 2.352-1.498 3.146 1.123.345 2.306.535 3.55.535 6.624 0 11.99-5.367 11.99-11.99C24.007 5.367 18.641.001 12.017.001z" fill="currentColor"/>
      </svg>
      <span class="visually-hidden">{{ 'general.social.pinterest' | t }}</span>
    </a>

    <a 
      href="https://www.linkedin.com/sharing/share-offsite/?url={{ encoded_url }}"
      class="social-sharing__button social-sharing__button--linkedin"
      target="_blank"
      rel="noopener noreferrer"
      aria-label="{{ 'general.social.share_on_linkedin' | t }}"
    >
      <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" fill="currentColor"/>
      </svg>
      <span class="visually-hidden">{{ 'general.social.linkedin' | t }}</span>
    </a>

    <button 
      class="social-sharing__button social-sharing__button--copy"
      data-copy-link="{{ share_url }}"
      aria-label="{{ 'general.social.copy_link' | t }}"
    >
      <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
        <path d="M16 1H4c-1.1 0-2 .9-2 2v14h2V3h12V1zm3 4H8c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h11c1.1 0 2-.9 2-2V7c0-1.1-.9-2-2-2zm0 16H8V7h11v14z" fill="currentColor"/>
      </svg>
      <span class="visually-hidden">{{ 'general.social.copy_link' | t }}</span>
    </button>
  </div>

  <div class="social-sharing__feedback" role="status" aria-live="polite" hidden>
    <span class="social-sharing__feedback-text"></span>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const copyButtons = document.querySelectorAll('[data-copy-link]');
  
  copyButtons.forEach(button => {
    button.addEventListener('click', async function() {
      const url = this.getAttribute('data-copy-link');
      const feedback = this.closest('.social-sharing').querySelector('.social-sharing__feedback');
      const feedbackText = feedback.querySelector('.social-sharing__feedback-text');
      
      try {
        await navigator.clipboard.writeText(url);
        feedbackText.textContent = '{{ 'general.social.link_copied' | t }}';
        feedback.hidden = false;
        
        setTimeout(() => {
          feedback.hidden = true;
        }, 2000);
      } catch (err) {
        // Fallback for browsers that don't support clipboard API
        const textArea = document.createElement('textarea');
        textArea.value = url;
        document.body.appendChild(textArea);
        textArea.select();
        document.execCommand('copy');
        document.body.removeChild(textArea);
        
        feedbackText.textContent = '{{ 'general.social.link_copied' | t }}';
        feedback.hidden = false;
        
        setTimeout(() => {
          feedback.hidden = true;
        }, 2000);
      }
    });
  });
});
</script>

<style>
.social-sharing {
  margin: 2rem 0;
}

.social-sharing__buttons {
  display: flex;
  gap: 1rem;
  flex-wrap: wrap;
}

.social-sharing__button {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 4rem;
  height: 4rem;
  border-radius: 50%;
  color: white;
  text-decoration: none;
  transition: all 0.15s ease;
  border: none;
  cursor: pointer;
}

.social-sharing__button:hover {
  transform: translateY(-0.1rem);
  box-shadow: 0 0.4rem 0.8rem rgba(0, 0, 0, 0.2);
}

.social-sharing__button svg {
  width: 2rem;
  height: 2rem;
  fill: currentColor;
}

.social-sharing__button--facebook {
  background: #1877f2;
}

.social-sharing__button--facebook:hover {
  background: #166fe5;
}

.social-sharing__button--twitter {
  background: #1da1f2;
}

.social-sharing__button--twitter:hover {
  background: #0d95e8;
}

.social-sharing__button--pinterest {
  background: #bd081c;
}

.social-sharing__button--pinterest:hover {
  background: #a50710;
}

.social-sharing__button--linkedin {
  background: #0077b5;
}

.social-sharing__button--linkedin:hover {
  background: #006396;
}

.social-sharing__button--copy {
  background: var(--color-foreground-75, #6b7280);
}

.social-sharing__button--copy:hover {
  background: var(--color-foreground, #374151);
}

.social-sharing__feedback {
  margin-top: 1rem;
  padding: 0.8rem 1.2rem;
  background: rgba(34, 197, 94, 0.1);
  color: rgb(34, 197, 94);
  border-radius: var(--border-radius, 0.5rem);
  font-size: 1.4rem;
  font-weight: 500;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(-0.5rem); }
  to { opacity: 1; transform: translateY(0); }
}

@media (max-width: 767px) {
  .social-sharing__buttons {
    justify-content: center;
  }
  
  .social-sharing__button {
    width: 3.5rem;
    height: 3.5rem;
  }
  
  .social-sharing__button svg {
    width: 1.8rem;
    height: 1.8rem;
  }
}
</style>