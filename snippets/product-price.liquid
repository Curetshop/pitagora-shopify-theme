{%- comment -%}
Product Price - Pitagora Theme
Displays product pricing with variants and badges support

Parameters:
- product: product object (required)
- use_variant: use selected variant for pricing (optional)
- show_badges: show sale/pricing badges (optional)
- class: additional CSS classes (optional)
{%- endcomment -%}

{%- liquid
  if use_variant and product.selected_or_first_available_variant
    assign current_variant = product.selected_or_first_available_variant
    assign price = current_variant.price
    assign compare_at_price = current_variant.compare_at_price
    assign available = current_variant.available
  else
    assign price = product.price
    assign compare_at_price = product.compare_at_price
    assign available = product.available
  endif

  assign on_sale = false
  if compare_at_price > price
    assign on_sale = true
  endif

  assign price_varies = false
  if product.price_varies and use_variant != true
    assign price_varies = true
  endif

  assign unit_price_measurement = current_variant.unit_price_measurement | default: product.selected_or_first_available_variant.unit_price_measurement
  assign unit_price = current_variant.unit_price | default: product.selected_or_first_available_variant.unit_price
-%}

<div class="product-price-wrapper {{ class }}" data-price-wrapper>
  {%- comment -%} Price Badges {%- endcomment -%}
  {%- if show_badges and on_sale -%}
    <div class="product-price-badges">
      {%- assign savings = compare_at_price | minus: price -%}
      {%- assign savings_percentage = savings | times: 100 | divided_by: compare_at_price -%}
      <span class="product-price-badge product-price-badge--sale">
        {{ 'products.product.save_amount' | t: amount: savings | money }}
        <span class="product-price-badge__percentage">(-{{ savings_percentage | round }}%)</span>
      </span>
    </div>
  {%- endif -%}

  {%- comment -%} Main Price Display {%- endcomment -%}
  <div class="product-price" data-price>
    {%- if available == false -%}
      <span class="product-price__sold-out">
        {{ 'products.product.sold_out' | t }}
      </span>
    {%- else -%}
      {%- if on_sale -%}
        <span class="product-price__sale" data-sale-price>
          {%- if price_varies -%}
            {{ 'products.product.price.from_price_html' | t: price: price | money }}
          {%- else -%}
            {{ price | money }}
          {%- endif -%}
        </span>
        <span class="product-price__compare" data-compare-price>
          {%- if price_varies -%}
            {{ product.compare_at_price_max | money }}
          {%- else -%}
            {{ compare_at_price | money }}
          {%- endif -%}
        </span>
      {%- else -%}
        <span class="product-price__regular" data-regular-price>
          {%- if price_varies -%}
            {{ 'products.product.price.from_price_html' | t: price: price | money }}
          {%- else -%}
            {{ price | money }}
          {%- endif -%}
        </span>
      {%- endif -%}
    {%- endif -%}
  </div>

  {%- comment -%} Unit Price {%- endcomment -%}
  {%- if unit_price -%}
    <div class="product-price__unit" data-unit-price>
      <span class="product-price__unit-price">{{ unit_price | money }}</span>
      <span class="product-price__unit-separator">{{ 'general.accessibility.unit_price_separator' | t }}</span>
      <span class="product-price__unit-measurement">
        {%- if unit_price_measurement.reference_value != 1 -%}
          {{ unit_price_measurement.reference_value }}
        {%- endif -%}
        {{ unit_price_measurement.reference_unit }}
      </span>
    </div>
  {%- endif -%}

  {%- comment -%} Tax and Shipping Info {%- endcomment -%}
  <div class="product-price__tax-info">
    {%- if shop.taxes_included or shop.shipping_policy.body != blank -%}
      {%- if shop.taxes_included and shop.shipping_policy.body != blank -%}
        {{ 'products.product.taxes_included_and_shipping_policy_html' | t: link: shop.shipping_policy.url }}
      {%- elsif shop.taxes_included -%}
        {{ 'products.product.include_taxes' | t }}
      {%- elsif shop.shipping_policy.body != blank -%}
        {{ 'products.product.shipping_policy_html' | t: link: shop.shipping_policy.url }}
      {%- endif -%}
    {%- else -%}
      {{ 'products.product.shipping_calculated_at_checkout' | t }}
    {%- endif -%}
  </div>
</div>

<style>
  .product-price-wrapper {
    margin-bottom: 1rem;
  }

  .product-price-badges {
    margin-bottom: 0.5rem;
  }

  .product-price-badge {
    display: inline-block;
    padding: 0.25rem 0.5rem;
    font-size: 0.875rem;
    font-weight: 500;
    border-radius: 0.25rem;
    background-color: var(--color-accent, #dc2626);
    color: var(--color-accent-contrast, #ffffff);
  }

  .product-price-badge__percentage {
    font-weight: 600;
  }

  .product-price {
    display: flex;
    align-items: baseline;
    gap: 0.5rem;
    flex-wrap: wrap;
    margin-bottom: 0.5rem;
  }

  .product-price__regular,
  .product-price__sale {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-foreground, #000000);
  }

  .product-price__sale {
    color: var(--color-accent, #dc2626);
  }

  .product-price__compare {
    font-size: 1.25rem;
    color: var(--color-foreground-75, #6b7280);
    text-decoration: line-through;
  }

  .product-price__sold-out {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-foreground-50, #9ca3af);
  }

  .product-price__unit {
    font-size: 0.875rem;
    color: var(--color-foreground-75, #6b7280);
    margin-bottom: 0.5rem;
  }

  .product-price__tax-info {
    font-size: 0.875rem;
    color: var(--color-foreground-75, #6b7280);
    line-height: 1.4;
  }

  .product-price__tax-info a {
    color: currentColor;
    text-decoration: underline;
  }

  @media (max-width: 767px) {
    .product-price__regular,
    .product-price__sale {
      font-size: 1.25rem;
    }
    
    .product-price__compare {
      font-size: 1.125rem;
    }
  }
</style>