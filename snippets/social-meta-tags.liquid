{%- comment -%}
  Social Media Meta Tags - SEO optimization
  Open Graph, Twitter Cards, and other social sharing meta tags
{%- endcomment -%}

{%- liquid
  assign og_title = page_title | default: shop.name
  assign og_description = page_description | default: shop.description | default: shop.name
  assign og_url = canonical_url | default: shop.url
  assign og_image = ''
  
  if template.name == 'product' and product.featured_media
    assign og_image = product.featured_media | image_url: width: 1200
    assign og_title = product.title
    assign og_description = product.description | strip_html | truncate: 155
  elsif template.name == 'collection' and collection.featured_image
    assign og_image = collection.featured_image | image_url: width: 1200
    assign og_title = collection.title
    assign og_description = collection.description | strip_html | truncate: 155
  elsif template.name == 'blog' and blog.image
    assign og_image = blog.image | image_url: width: 1200
  elsif template.name == 'article' and article.image
    assign og_image = article.image | image_url: width: 1200
    assign og_title = article.title
    assign og_description = article.summary | strip_html | truncate: 155
  elsif settings.logo
    assign og_image = settings.logo | image_url: width: 1200
  endif
-%}

{%- comment -%} Open Graph meta tags {%- endcomment -%}
<meta property="og:site_name" content="{{ shop.name | escape }}">
<meta property="og:url" content="{{ og_url }}">
<meta property="og:title" content="{{ og_title | escape }}">
<meta property="og:type" content="{% if template.name == 'product' %}product{% elsif template.name == 'article' %}article{% else %}website{% endif %}">
<meta property="og:description" content="{{ og_description | escape }}">

{%- if og_image != blank -%}
  <meta property="og:image" content="{{ og_image }}">
  <meta property="og:image:alt" content="{{ og_title | escape }}">
  <meta property="og:image:width" content="1200">
  <meta property="og:image:height" content="630">
{%- endif -%}

{%- comment -%} Twitter Card meta tags {%- endcomment -%}
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:title" content="{{ og_title | escape }}">
<meta name="twitter:description" content="{{ og_description | escape }}">

{%- if og_image != blank -%}
  <meta name="twitter:image" content="{{ og_image }}">
  <meta name="twitter:image:alt" content="{{ og_title | escape }}">
{%- endif -%}

{%- if settings.social_twitter != blank -%}
  <meta name="twitter:site" content="{{ settings.social_twitter | replace: 'https://twitter.com/', '@' | replace: 'https://x.com/', '@' }}">
{%- endif -%}

{%- comment -%} Product specific meta tags {%- endcomment -%}
{%- if template.name == 'product' -%}
  <meta property="product:brand" content="{{ product.vendor | escape }}">
  <meta property="product:availability" content="{% if product.available %}in stock{% else %}out of stock{% endif %}">
  <meta property="product:condition" content="new">
  <meta property="product:price:amount" content="{{ product.price | money_without_currency }}">
  <meta property="product:price:currency" content="{{ cart.currency.iso_code }}">
  
  {%- if product.selected_or_first_available_variant.sku != blank -%}
    <meta property="product:retailer_item_id" content="{{ product.selected_or_first_available_variant.sku }}">
  {%- endif -%}
{%- endif -%}

{%- comment -%} Article specific meta tags {%- endcomment -%}
{%- if template.name == 'article' -%}
  <meta property="article:published_time" content="{{ article.published_at | date: '%Y-%m-%dT%H:%M:%S%z' }}">
  <meta property="article:modified_time" content="{{ article.updated_at | date: '%Y-%m-%dT%H:%M:%S%z' }}">
  <meta property="article:author" content="{{ article.author | escape }}">
  
  {%- for tag in article.tags -%}
    <meta property="article:tag" content="{{ tag | escape }}">
  {%- endfor -%}
{%- endif -%}

{%- comment -%} Schema.org JSON-LD structured data {%- endcomment -%}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": {{ shop.name | json }},
  "url": {{ shop.url | json }}{% if settings.social_links %},
  "sameAs": [
    {% if settings.social_facebook != blank %}{{ settings.social_facebook | json }}{% unless forloop.last %},{% endunless %}{% endif %}
    {% if settings.social_twitter != blank %}{{ settings.social_twitter | json }}{% unless forloop.last %},{% endunless %}{% endif %}
    {% if settings.social_instagram != blank %}{{ settings.social_instagram | json }}{% unless forloop.last %},{% endunless %}{% endif %}
    {% if settings.social_youtube != blank %}{{ settings.social_youtube | json }}{% unless forloop.last %},{% endunless %}{% endif %}
    {% if settings.social_tiktok != blank %}{{ settings.social_tiktok | json }}{% endif %}
  ]{% endif %}
}
</script>

{%- if template.name == 'product' -%}
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Product",
  "name": {{ product.title | json }},
  "url": {{ shop.url | append: product.url | json }},
  {% if product.featured_media -%}
    "image": [
      {{ product.featured_media | image_url: width: 1200 | prepend: "https:" | json }}
      {%- for media in product.media limit: 5 -%}
        {%- unless media.id == product.featured_media.id -%}
          ,{{ media | image_url: width: 1200 | prepend: "https:" | json }}
        {%- endunless -%}
      {%- endfor -%}
    ],
  {%- endif %}
  "description": {{ product.description | strip_html | json }},
  {% if product.selected_or_first_available_variant.sku != blank -%}
    "sku": {{ product.selected_or_first_available_variant.sku | json }},
  {%- endif %}
  "brand": {
    "@type": "Brand", 
    "name": {{ product.vendor | json }}
  },
  "offers": [
    {%- for variant in product.variants -%}
      {
        "@type": "Offer",
        {% if variant.sku != blank -%}"sku": {{ variant.sku | json }},{% endif %}
        "availability": "https://schema.org/{% if variant.available %}InStock{% else %}OutOfStock{% endif %}",
        "price": {{ variant.price | divided_by: 100.00 | json }},
        "priceCurrency": {{ cart.currency.iso_code | json }},
        "url": {{ shop.url | append: variant.url | json }}
      }{% unless forloop.last %},{% endunless %}
    {%- endfor -%}
  ]{% if product.reviews_count > 0 %},
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "{{ product.reviews_rating }}",
    "reviewCount": "{{ product.reviews_count }}"
  }{% endif %}
}
</script>
{%- endif -%}