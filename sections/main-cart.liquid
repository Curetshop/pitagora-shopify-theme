{%- comment -%}
Main Cart Section - Pitagora Theme
Complete cart page with all modern features and accessibility
Based on Shopify Online Store 2.0 standards
{%- endcomment -%}

{{ 'cart.css' | asset_url | stylesheet_tag }}
<script src="{{ 'cart.js' | asset_url }}" defer="defer"></script>

<div class="cart-template">
  <div class="page-width">
    <header class="cart-header">
      <h1 class="cart-title">
        {{ 'sections.cart.title' | t }}
      </h1>
    </header>

    <cart-items class="cart-items{% if cart == empty %} cart-items--empty{% endif %}">
      <div class="cart-items__inner">
        {%- if cart != empty -%}
          
          {%- comment -%} Discount Code Section {%- endcomment -%}
          {%- if section.settings.show_discount_code -%}
            <div class="cart-discount">
              <h3 class="cart-discount__title">{{ 'sections.cart.discount_code' | t }}</h3>
              <form class="cart-discount__form" action="{{ routes.cart_url }}" method="post">
                <input 
                  type="text" 
                  name="discount" 
                  class="cart-discount__input" 
                  placeholder="{{ 'sections.cart.discount_placeholder' | t }}"
                  value="{{ cart.discount_codes.first.code | escape }}"
                  aria-label="{{ 'sections.cart.discount_code' | t }}"
                >
                <button type="submit" class="cart-discount__button">
                  {{ 'sections.cart.apply_discount' | t }}
                </button>
              </form>
            </div>
          {%- endif -%}

          <div class="cart-items__header">
            <span class="cart-items__count">
              {{ 'sections.cart.headings.product' | t }}
            </span>
            <span class="cart-items__quantity-header">
              {{ 'sections.cart.headings.quantity' | t }}
            </span>
            <span class="cart-items__price">
              {{ 'sections.cart.headings.total' | t }}
            </span>
          </div>

          <form action="{{ routes.cart_url }}" method="post" id="cart" novalidate>
            <div class="cart-items__content" id="main-cart-items" data-id="{{ section.id }}">
              {%- for item in cart.items -%}
                <div class="cart-item" id="CartItem-{{ item.index | plus: 1 }}" data-variant-id="{{ item.variant.id }}">
                  
                  {%- comment -%} Product Image {%- endcomment -%}
                  <div class="cart-item__media">
                    <a href="{{ item.url }}" class="cart-item__image-wrapper" tabindex="-1" aria-hidden="true">
                      {%- if item.image -%}
                        <img
                          class="cart-item__image"
                          src="{{ item.image | image_url: width: 300 }}"
                          alt="{{ item.image.alt | escape | default: item.product.title | escape }}"
                          loading="lazy"
                          width="120"
                          height="120"
                          sizes="(max-width: 767px) 80px, 120px"
                          srcset="
                            {{ item.image | image_url: width: 80 }} 80w,
                            {{ item.image | image_url: width: 120 }} 120w,
                            {{ item.image | image_url: width: 160 }} 160w,
                            {{ item.image | image_url: width: 240 }} 240w,
                            {{ item.image | image_url: width: 300 }} 300w
                          "
                        >
                      {%- else -%}
                        <div class="cart-item__image cart-item__image--placeholder">
                          {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
                        </div>
                      {%- endif -%}
                    </a>
                  </div>

                  {%- comment -%} Product Details {%- endcomment -%}
                  <div class="cart-item__details">
                    <h3 class="cart-item__name">
                      <a href="{{ item.url }}">{{ item.product.title | escape }}</a>
                    </h3>

                    {%- comment -%} Pricing {%- endcomment -%}
                    {%- if item.original_price != item.final_price -%}
                      <div class="cart-item__discounted-prices">
                        <span class="visually-hidden">
                          {{ 'products.product.price.regular_price' | t }}
                        </span>
                        <s class="cart-item__old-price product-option">
                          {{ item.original_price | money }}
                        </s>
                        <span class="visually-hidden">
                          {{ 'products.product.price.sale_price' | t }}
                        </span>
                        <strong class="cart-item__final-price product-option">
                          {{ item.final_price | money }}
                        </strong>
                      </div>
                    {%- else -%}
                      <div class="cart-item__price">
                        <span class="visually-hidden">
                          {{ 'products.product.price.regular_price' | t }}
                        </span>
                        {{ item.original_price | money }}
                      </div>
                    {%- endif -%}

                    {%- comment -%} Product Options & Properties {%- endcomment -%}
                    {%- if item.product.has_only_default_variant == false or item.properties.size != 0 or item.selling_plan_allocation != nil -%}
                      <dl class="cart-item__options">
                        {%- unless item.product.has_only_default_variant -%}
                          {%- for option in item.options_with_values -%}
                            <div class="cart-item__option">
                              <dt>{{ option.name }}: </dt>
                              <dd>{{ option.value }}</dd>
                            </div>
                          {%- endfor -%}
                        {%- endunless -%}

                        {%- for property in item.properties -%}
                          {%- assign property_first_char = property.first | slice: 0 -%}
                          {%- if property.last != blank and property_first_char != '_' -%}
                            <div class="cart-item__option">
                              <dt>{{ property.first }}: </dt>
                              <dd>
                                {%- if property.last contains '/uploads/' -%}
                                  <a href="{{ property.last }}" class="link" target="_blank" rel="noopener">
                                    {{ property.last | split: '/' | last }}
                                  </a>
                                {%- else -%}
                                  {{ property.last }}
                                {%- endif -%}
                              </dd>
                            </div>
                          {%- endif -%}
                        {%- endfor -%}
                      </dl>
                      
                      <p class="cart-item__variant-id visually-hidden">{{ item.variant.id }}</p>
                    {%- endif -%}

                    {%- comment -%} Selling Plan {%- endcomment -%}
                    {%- if item.selling_plan_allocation != nil -%}
                      <p class="cart-item__selling-plan">{{ item.selling_plan_allocation.selling_plan.name }}</p>
                    {%- endif -%}

                    {%- comment -%} Quantity Rules Check {%- endcomment -%}
                    {%- assign has_qty_rules = false -%}
                    {%- if item.variant.quantity_rule.min > 1 or item.variant.quantity_rule.max != null or item.variant.quantity_rule.increment > 1 -%}
                      {%- assign has_qty_rules = true -%}
                    {%- endif -%}

                    {%- comment -%} Quantity Controls {%- endcomment -%}
                    <div class="cart-item__quantity{% if has_qty_rules %} cart-item__quantity--info{% endif %}">
                      <div class="cart-item__quantity-wrapper">
                        <label class="visually-hidden" for="Quantity-{{ item.index | plus: 1 }}">
                          {{ 'products.product.quantity.label' | t }}
                        </label>
                        
                        <quantity-input class="quantity cart-quantity" data-url="{{ routes.cart_change_url }}">
                          <button 
                            class="quantity__button no-js-hidden" 
                            name="minus" 
                            type="button"
                            aria-label="{{ 'products.product.quantity.decrease' | t: product: item.product.title | escape }}"
                            data-variant-id="{{ item.variant.id }}"
                            {% if item.quantity <= item.variant.quantity_rule.min %}disabled{% endif %}
                          >
                            <span class="visually-hidden">
                              {{ 'products.product.quantity.decrease' | t: product: item.product.title | escape }}
                            </span>
                            {% render 'icon-minus' %}
                          </button>
                          
                          <input
                            class="quantity__input"
                            data-quantity-variant-id="{{ item.variant.id }}"
                            type="number"
                            name="updates[]"
                            value="{{ item.quantity }}"
                            data-cart-quantity="{{ cart | item_count_for_variant: item.variant.id }}"
                            min="{{ item.variant.quantity_rule.min }}"
                            {% if item.variant.quantity_rule.max != null %}
                              max="{{ item.variant.quantity_rule.max }}"
                            {% endif %}
                            step="{{ item.variant.quantity_rule.increment }}"
                            aria-label="{{ 'products.product.quantity.input_label' | t: product: item.product.title | escape }}"
                            id="Quantity-{{ item.index | plus: 1 }}"
                            data-index="{{ item.index | plus: 1 }}"
                            data-line="{{ forloop.index }}"
                            autocomplete="off"
                          >
                          
                          <button 
                            class="quantity__button no-js-hidden" 
                            name="plus" 
                            type="button"
                            aria-label="{{ 'products.product.quantity.increase' | t: product: item.product.title | escape }}"
                            data-variant-id="{{ item.variant.id }}"
                            {% if item.variant.quantity_rule.max != null and item.quantity >= item.variant.quantity_rule.max %}disabled{% endif %}
                          >
                            <span class="visually-hidden">
                              {{ 'products.product.quantity.increase' | t: product: item.product.title | escape }}
                            </span>
                            {% render 'icon-plus' %}
                          </button>
                        </quantity-input>

                        {%- comment -%} Quantity Rules Display {%- endcomment -%}
                        {%- if has_qty_rules -%}
                          <div class="cart-item__quantity-rules">
                            {%- if item.variant.quantity_rule.min > 1 -%}
                              <span class="cart-item__quantity-rule">
                                {{ 'products.product.quantity.minimum_of' | t: quantity: item.variant.quantity_rule.min }}
                              </span>
                            {%- endif -%}
                            {%- if item.variant.quantity_rule.max != null -%}
                              <span class="cart-item__quantity-rule">
                                {{ 'products.product.quantity.maximum_of' | t: quantity: item.variant.quantity_rule.max }}
                              </span>
                            {%- endif -%}
                            {%- if item.variant.quantity_rule.increment > 1 -%}
                              <span class="cart-item__quantity-rule">
                                {{ 'products.product.quantity.multiples_of' | t: quantity: item.variant.quantity_rule.increment }}
                              </span>
                            {%- endif -%}
                          </div>
                        {%- endif -%}
                      </div>

                      {%- comment -%} Remove Item Button {%- endcomment -%}
                      <cart-remove-button
                        id="Remove-{{ item.index | plus: 1 }}"
                        data-index="{{ item.index | plus: 1 }}"
                        data-url="{{ routes.cart_change_url }}"
                      >
                        <a
                          href="{{ item.url_to_remove }}"
                          class="cart-item__remove"
                          aria-label="{{ 'sections.cart.remove_title' | t: title: item.title }}"
                        >
                          {% render 'icon-remove' %}
                          {{ 'sections.cart.remove' | t }}
                        </a>
                      </cart-remove-button>
                    </div>

                    {%- comment -%} Inventory Warning {%- endcomment -%}
                    {%- if item.variant.available == false -%}
                      <div class="cart-item__warning">
                        <p class="cart-item__warning-text">
                          {{ 'sections.cart.inventory_warning' | t }}
                        </p>
                      </div>
                    {%- elsif item.variant.inventory_management == 'shopify' and item.variant.inventory_quantity <= 5 -%}
                      <div class="cart-item__low-stock">
                        <p class="cart-item__low-stock-text">
                          {{ 'sections.cart.low_stock_warning' | t: count: item.variant.inventory_quantity }}
                        </p>
                      </div>
                    {%- endif -%}
                  </div>

                  {%- comment -%} Line Total Price {%- endcomment -%}
                  <div class="cart-item__total-price">
                    <div class="loading-overlay hidden">
                      <div class="loading-overlay__spinner">
                        {% render 'icon-spinner' %}
                      </div>
                    </div>
                    <div class="cart-item__price-wrapper">
                      {%- if item.original_line_price != item.final_line_price -%}
                        <dl class="cart-item__discounted-prices">
                          <dt class="visually-hidden">
                            {{ 'products.product.price.regular_price' | t }}
                          </dt>
                          <dd>
                            <s class="cart-item__old-price price price--end">
                              {{ item.original_line_price | money }}
                            </s>
                          </dd>
                          <dt class="visually-hidden">
                            {{ 'products.product.price.sale_price' | t }}
                          </dt>
                          <dd class="price price--end">
                            {{ item.final_line_price | money }}
                          </dd>
                        </dl>
                      {%- else -%}
                        <span class="price price--end">
                          {{ item.original_line_price | money }}
                        </span>
                      {%- endif -%}

                      {%- comment -%} Unit Price {%- endcomment -%}
                      {%- if item.variant.available and item.unit_price_measurement -%}
                        <div class="unit-price caption">
                          <span class="visually-hidden">{{ 'products.product.price.unit_price' | t }}</span>
                          {{ item.unit_price | money }}
                          <span aria-hidden="true">/</span>
                          <span class="visually-hidden">&nbsp;{{ 'accessibility.unit_price_separator' | t }}&nbsp;</span>
                          {%- if item.unit_price_measurement.reference_value != 1 -%}
                            {{- item.unit_price_measurement.reference_value -}}
                          {%- endif -%}
                          {{ item.unit_price_measurement.reference_unit }}
                        </div>
                      {%- endif -%}
                    </div>
                  </div>
                </div>
              {%- endfor -%}
            </div>
          </form>

          <p class="visually-hidden" id="cart-live-region-text" aria-live="polite" role="status"></p>
          <p class="visually-hidden" id="shopping-cart-line-item-status" aria-live="polite" aria-hidden="true" role="status">{{ 'accessibility.loading' | t }}</p>
          
        {%- else -%}
          
          {%- comment -%} Empty Cart State {%- endcomment -%}
          <div class="cart-empty">
            <div class="cart-empty__content">
              <h2>{{ 'sections.cart.empty' | t }}</h2>
              <p>{{ 'sections.cart.empty_text' | t }}</p>
              <a href="{{ routes.collections_url }}" class="button button--primary">
                {{ 'general.continue_shopping' | t }}
              </a>
            </div>
          </div>
          
        {%- endif -%}
      </div>
    </cart-items>

    {%- if cart != empty -%}
      <div class="cart-footer">
        
        {%- comment -%} Left Column - Notes and Shipping {%- endcomment -%}
        <div class="cart-footer__left">
          
          {%- comment -%} Cart Note {%- endcomment -%}
          {%- if section.settings.show_cart_note -%}
            <cart-note class="cart-note">
              <label for="Cart-note">{{ 'sections.cart.note' | t }}</label>
              <textarea
                class="text-area text-area--resize-vertical field__input"
                name="note"
                id="Cart-note"
                placeholder="{{ 'sections.cart.note_placeholder' | t }}"
                form="cart"
                maxlength="500"
              >{{ cart.note }}</textarea>
            </cart-note>
          {%- endif -%}

          {%- comment -%} Shipping Calculator {%- endcomment -%}
          {%- if section.settings.show_shipping_calculator -%}
            <div class="cart-shipping-calculator">
              <h3>{{ 'sections.cart.shipping_calculator.title' | t }}</h3>
              <div class="cart-shipping-calculator__form">
                <div class="field">
                  <label for="AddressCountry">{{ 'sections.cart.shipping_calculator.country' | t }}</label>
                  <select id="AddressCountry" name="address[country]" class="select__select" aria-describedby="shipping-calculator-country-error">
                    <option value="">{{ 'sections.cart.shipping_calculator.country_placeholder' | t }}</option>
                    {{ country_option_tags }}
                  </select>
                  <div id="shipping-calculator-country-error" class="field__error" role="alert"></div>
                </div>
                
                <div class="field">
                  <label for="AddressProvince">{{ 'sections.cart.shipping_calculator.province' | t }}</label>
                  <select id="AddressProvince" name="address[province]" class="select__select" disabled aria-describedby="shipping-calculator-province-error">
                    <option value="">{{ 'sections.cart.shipping_calculator.province_placeholder' | t }}</option>
                  </select>
                  <div id="shipping-calculator-province-error" class="field__error" role="alert"></div>
                </div>
                
                <div class="field">
                  <label for="AddressZip">{{ 'sections.cart.shipping_calculator.zip' | t }}</label>
                  <input 
                    type="text" 
                    id="AddressZip" 
                    name="address[zip]" 
                    class="field__input" 
                    placeholder="{{ 'sections.cart.shipping_calculator.zip_placeholder' | t }}"
                    aria-describedby="shipping-calculator-zip-error"
                  >
                  <div id="shipping-calculator-zip-error" class="field__error" role="alert"></div>
                </div>
                
                <button type="button" class="button button--secondary" id="calculate-shipping" disabled>
                  <span class="button-text">{{ 'sections.cart.shipping_calculator.calculate' | t }}</span>
                  <span class="loading-spinner hidden">{{ 'general.accessibility.loading' | t }}</span>
                </button>
              </div>
              
              <div class="cart-shipping-results" id="shipping-results" style="display: none;" role="region" aria-live="polite">
                <h4>{{ 'sections.cart.shipping_calculator.results_title' | t }}</h4>
                <div class="cart-shipping-results__content"></div>
              </div>
              
              <div class="cart-shipping-error" id="shipping-error" style="display: none;" role="alert">
                <p class="shipping-error-text"></p>
              </div>
            </div>
          {%- endif -%}
          
        </div>

        {%- comment -%} Right Column - Totals and Checkout {%- endcomment -%}
        <div class="cart-footer__right">
          <div class="cart-totals" role="region" aria-labelledby="cart-totals-heading">
            
            {%- comment -%} Totals Section {%- endcomment -%}
            <div class="totals">
              <h2 id="cart-totals-heading" class="totals__title">{{ 'sections.cart.totals' | t }}</h2>
              
              <div class="totals__subtotal">
                <span>{{ 'sections.cart.subtotal' | t }}</span>
                <span class="totals__subtotal-value">{{ cart.total_price | money_with_currency }}</span>
              </div>

              {%- comment -%} Cart Level Discounts {%- endcomment -%}
              {%- if cart.cart_level_discount_applications.size > 0 -%}
                <ul class="discounts list-unstyled" role="list" aria-label="{{ 'customer.order.discount' | t }}">
                  {%- for discount in cart.cart_level_discount_applications -%}
                    <li class="discounts__discount discounts__discount--position">
                      {%- render 'icon-discount' -%}
                      {{ discount.title | escape }}
                      <span class="discount-amount">(-{{ discount.total_allocated_amount | money }})</span>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}

              {%- comment -%} Tax Information {%- endcomment -%}
              <small class="tax-note caption-large rte">
                {%- if cart.taxes_included and shop.shipping_policy.body != blank -%}
                  {{ 'sections.cart.taxes_included_and_shipping_policy_html' | t: link: shop.shipping_policy.url }}
                {%- elsif cart.taxes_included -%}
                  {{ 'sections.cart.taxes_included_but_shipping_at_checkout' | t }}
                {%- elsif shop.shipping_policy.body != blank -%}
                  {{ 'sections.cart.taxes_and_shipping_policy_at_checkout_html' | t: link: shop.shipping_policy.url }}
                {%- else -%}
                  {{ 'sections.cart.taxes_and_shipping_at_checkout' | t }}
                {%- endif -%}
              </small>
            </div>

            {%- comment -%} Checkout Actions {%- endcomment -%}
            <div class="cart-actions">
              <button
                type="submit"
                id="checkout"
                class="cart-actions__checkout-button button button--primary button--full-width"
                name="add"
                form="cart"
                {% unless cart.requires_shipping == false %}
                  aria-describedby="cart-shipping-policy"
                {% endunless %}
                {% if settings.cart_drawer_collection %}
                  data-cart-drawer-checkout
                {% endif %}
              >
                <span class="button-text">{{ 'sections.cart.checkout' | t }}</span>
                <div class="loading-overlay hidden">
                  <div class="loading-overlay__spinner">
                    {% render 'icon-spinner' %}
                  </div>
                </div>
              </button>

              {%- comment -%} Dynamic Checkout Buttons {%- endcomment -%}
              {%- if additional_checkout_buttons and section.settings.show_dynamic_checkout -%}
                <div class="cart-actions__dynamic-checkout">
                  {{ additional_checkout_buttons }}
                </div>
              {%- endif -%}
            </div>
            
          </div>
        </div>
      </div>

      {%- comment -%} Product Recommendations {%- endcomment -%}
      {%- if section.settings.show_recommendations and cart.item_count > 0 -%}
        <div class="cart-recommendations">
          <h2 class="cart-recommendations__title">{{ section.settings.recommendations_heading | escape }}</h2>
          
          <product-recommendations
            class="cart-recommendations__products"
            data-url="{{ routes.product_recommendations_url }}?section_id={{ section.id }}&product_id={{ cart.items.first.product_id }}&limit={{ section.settings.recommendations_products_to_show }}"
            data-intent="complementary"
          >
            {%- if recommendations.performed and recommendations.products_count > 0 -%}
              <div class="cart-recommendations__grid grid">
                {%- for recommendation in recommendations.products limit: section.settings.recommendations_products_to_show -%}
                  <div class="grid__item">
                    {% render 'product-card',
                      card_product: recommendation,
                      media_aspect_ratio: section.settings.recommendations_image_ratio,
                      show_secondary_image: false,
                      show_vendor: section.settings.show_vendor,
                      show_rating: false,
                      show_quick_add: true,
                      lazy_load: false,
                      section_id: section.id
                    %}
                  </div>
                {%- endfor -%}
              </div>
            {%- endif -%}
          </product-recommendations>
        </div>
      {%- endif -%}
      
    {%- endif -%}
  </div>
</div>

{%- comment -%} Custom Elements JavaScript {%- endcomment -%}
<script>
  document.addEventListener('DOMContentLoaded', function() {
    
    // Focus management for cart items
    function getFocusableElements(container) {
      return Array.from(
        container.querySelectorAll(
          "summary, a[href], button:enabled, [tabindex]:not([tabindex^='-']), [draggable], area, input:not([type=hidden]):enabled, select:enabled, textarea:enabled, object, iframe"
        )
      );
    }
    
    // Keyboard navigation for cart items
    document.querySelectorAll('[id^="CartItem-"]').forEach((item) => {
      const focusableElements = getFocusableElements(item);
      const firstElement = focusableElements[0];
      const lastElement = focusableElements[focusableElements.length - 1];

      item.addEventListener('keydown', (event) => {
        if (event.code.toUpperCase() === 'ESCAPE') {
          const modalClose = event.target.closest('details[open]');
          if (!modalClose) return;
          const summaryElement = modalClose.querySelector('summary');
          modalClose.removeAttribute('open');
          summaryElement.setAttribute('aria-expanded', false);
          summaryElement.focus();
        }
        
        // Tab trapping within cart item
        if (event.key === 'Tab') {
          if (event.shiftKey) {
            if (document.activeElement === firstElement) {
              event.preventDefault();
              lastElement.focus();
            }
          } else {
            if (document.activeElement === lastElement) {
              event.preventDefault();
              firstElement.focus();
            }
          }
        }
      });
    });

    // Shipping calculator functionality
    const countrySelect = document.getElementById('AddressCountry');
    const provinceSelect = document.getElementById('AddressProvince');
    const zipInput = document.getElementById('AddressZip');
    const calculateButton = document.getElementById('calculate-shipping');
    
    if (countrySelect && provinceSelect && calculateButton) {
      // Enable calculate button when country is selected
      countrySelect.addEventListener('change', function() {
        const hasCountry = this.value !== '';
        calculateButton.disabled = !hasCountry;
        provinceSelect.disabled = !hasCountry;
        
        // Reset province when country changes
        if (hasCountry) {
          provinceSelect.innerHTML = '<option value="">{{ "sections.cart.shipping_calculator.province_placeholder" | t }}</option>';
          // Here you would typically load provinces for the selected country
          loadProvincesForCountry(this.value);
        } else {
          provinceSelect.innerHTML = '<option value="">{{ "sections.cart.shipping_calculator.province_placeholder" | t }}</option>';
        }
      });
      
      // Calculate shipping rates
      calculateButton.addEventListener('click', function() {
        const country = countrySelect.value;
        const province = provinceSelect.value;
        const zip = zipInput.value;
        
        if (!country) return;
        
        this.disabled = true;
        const buttonText = this.querySelector('.button-text');
        const loadingSpinner = this.querySelector('.loading-spinner');
        
        if (buttonText) buttonText.style.display = 'none';
        if (loadingSpinner) loadingSpinner.classList.remove('hidden');
        
        // Simulate shipping calculation (replace with actual API call)
        setTimeout(() => {
          this.disabled = false;
          if (buttonText) buttonText.style.display = 'inline';
          if (loadingSpinner) loadingSpinner.classList.add('hidden');
          
          // Show results (this would be populated by actual shipping rates)
          const resultsDiv = document.getElementById('shipping-results');
          if (resultsDiv) {
            resultsDiv.style.display = 'block';
            resultsDiv.querySelector('.cart-shipping-results__content').innerHTML = `
