{%- comment -%}
Contact Form Section - Pitagora Theme
Customizable contact form with validation and submission handling
{%- endcomment -%}

<style>
  #shopify-section-{{ section.id }} {
    --contact-form-bg: {{ section.settings.background_color | default: 'transparent' }};
    --contact-form-text: {{ section.settings.text_color | default: 'inherit' }};
  }
</style>

<div 
  class="contact-form section-padding"
  style="background: var(--contact-form-bg); color: var(--contact-form-text);"
>
  <div class="page-width">
    {%- if section.settings.heading != blank or section.settings.subheading != blank -%}
      <div class="section-header text-center">
        {%- if section.settings.subheading != blank -%}
          <p class="section-header__subheading">{{ section.settings.subheading | escape }}</p>
        {%- endif -%}
        
        {%- if section.settings.heading != blank -%}
          <h2 class="section-header__heading h2">{{ section.settings.heading | escape }}</h2>
        {%- endif -%}
      </div>
    {%- endif -%}

    <div class="contact-form__wrapper">
      <div class="contact-form__content">
        {%- if section.settings.description != blank -%}
          <div class="contact-form__description rte">
            {{ section.settings.description }}
          </div>
        {%- endif -%}

        {%- form 'contact', class: 'contact-form__form', id: 'contact-form-' | append: section.id -%}
          {%- if form.posted_successfully? -%}
            <div class="contact-form__success" role="status">
              <h3 class="contact-form__success-title">{{ 'templates.contact.form.post_success' | t }}</h3>
              <p>{{ section.settings.success_message | default: 'Thank you for your message. We will get back to you soon!' | escape }}</p>
            </div>
          {%- else -%}
            {%- if form.errors -%}
              <div class="contact-form__errors" role="alert">
                <h3 class="contact-form__errors-title">{{ 'general.form.error_heading' | t }}</h3>
                <ul class="contact-form__errors-list">
                  {%- for field in form.errors -%}
                    <li>
                      {%- if field == 'form' -%}
                        {{ form.errors.messages[field] }}
                      {%- else -%}
                        {{ form.errors.translated_fields[field] | capitalize }} {{ form.errors.messages[field] }}
                      {%- endif -%}
                    </li>
                  {%- endfor -%}
                </ul>
              </div>
            {%- endif -%}

            <div class="contact-form__fields">
              <div class="contact-form__field-group">
                <div class="contact-form__field contact-form__field--half">
                  <label for="contact-name-{{ section.id }}" class="contact-form__label">
                    {{ 'templates.contact.form.name' | t }} *
                  </label>
                  <input
                    type="text"
                    id="contact-name-{{ section.id }}"
                    name="contact[{{ 'templates.contact.form.name' | t }}]"
                    class="contact-form__input"
                    value="{{ form.name }}"
                    placeholder="{{ 'templates.contact.form.name' | t }}"
                    required
                    {% if form.errors contains 'name' %}aria-invalid="true" aria-describedby="contact-name-error-{{ section.id }}"{% endif %}
                  >
                  {%- if form.errors contains 'name' -%}
                    <span id="contact-name-error-{{ section.id }}" class="contact-form__error">
                      {{ form.errors.translated_fields.name | capitalize }} {{ form.errors.messages.name }}
                    </span>
                  {%- endif -%}
                </div>

                <div class="contact-form__field contact-form__field--half">
                  <label for="contact-email-{{ section.id }}" class="contact-form__label">
                    {{ 'templates.contact.form.email' | t }} *
                  </label>
                  <input
                    type="email"
                    id="contact-email-{{ section.id }}"
                    name="contact[email]"
                    class="contact-form__input"
                    value="{{ form.email }}"
                    placeholder="{{ 'templates.contact.form.email' | t }}"
                    required
                    {% if form.errors contains 'email' %}aria-invalid="true" aria-describedby="contact-email-error-{{ section.id }}"{% endif %}
                  >
                  {%- if form.errors contains 'email' -%}
                    <span id="contact-email-error-{{ section.id }}" class="contact-form__error">
                      {{ form.errors.translated_fields.email | capitalize }} {{ form.errors.messages.email }}
                    </span>
                  {%- endif -%}
                </div>
              </div>

              {%- if section.settings.show_phone -%}
                <div class="contact-form__field">
                  <label for="contact-phone-{{ section.id }}" class="contact-form__label">
                    {{ 'templates.contact.form.phone' | t }}
                  </label>
                  <input
                    type="tel"
                    id="contact-phone-{{ section.id }}"
                    name="contact[{{ 'templates.contact.form.phone' | t }}]"
                    class="contact-form__input"
                    value="{{ form.phone }}"
                    placeholder="{{ 'templates.contact.form.phone' | t }}"
                  >
                </div>
              {%- endif -%}

              {%- if section.settings.show_subject -%}
                <div class="contact-form__field">
                  <label for="contact-subject-{{ section.id }}" class="contact-form__label">
                    {{ 'templates.contact.form.subject' | t }}
                  </label>
                  <input
                    type="text"
                    id="contact-subject-{{ section.id }}"
                    name="contact[{{ 'templates.contact.form.subject' | t }}]"
                    class="contact-form__input"
                    value="{{ form.subject }}"
                    placeholder="{{ 'templates.contact.form.subject' | t }}"
                  >
                </div>
              {%- endif -%}

              <div class="contact-form__field">
                <label for="contact-message-{{ section.id }}" class="contact-form__label">
                  {{ 'templates.contact.form.comment' | t }} *
                </label>
                <textarea
                  id="contact-message-{{ section.id }}"
                  name="contact[body]"
                  class="contact-form__textarea"
                  rows="6"
                  placeholder="{{ 'templates.contact.form.comment' | t }}"
                  required
                  {% if form.errors contains 'body' %}aria-invalid="true" aria-describedby="contact-message-error-{{ section.id }}"{% endif %}
                >{{ form.body }}</textarea>
                {%- if form.errors contains 'body' -%}
                  <span id="contact-message-error-{{ section.id }}" class="contact-form__error">
                    {{ form.errors.translated_fields.body | capitalize }} {{ form.errors.messages.body }}
                  </span>
                {%- endif -%}
              </div>

              {%- if section.settings.enable_privacy_checkbox -%}
                <div class="contact-form__field contact-form__field--checkbox">
                  <input
                    type="checkbox"
                    id="contact-privacy-{{ section.id }}"
                    name="contact[privacy_policy_accepted]"
                    class="contact-form__checkbox"
                    required
                  >
                  <label for="contact-privacy-{{ section.id }}" class="contact-form__checkbox-label">
                    {%- if section.settings.privacy_policy_url != blank -%}
                      {{ 'templates.contact.form.privacy_policy_html' | t: privacy_policy_url: section.settings.privacy_policy_url }}
                    {%- else -%}
                      {{ section.settings.privacy_text | default: 'I agree to the privacy policy' | escape }}
                    {%- endif -%}
                  </label>
                </div>
              {%- endif -%}

              <div class="contact-form__submit">
                <button type="submit" class="contact-form__button button button--{{ section.settings.button_style }} button--large">
                  {{ section.settings.button_text | default: 'Send message' | escape }}
                </button>
              </div>
            </div>
          {%- endif -%}
        {%- endform -%}
      </div>

      {%- if section.settings.show_contact_info and section.blocks.size > 0 -%}
        <div class="contact-form__info">
          <div class="contact-form__info-content">
            {%- for block in section.blocks -%}
              <div class="contact-form__info-item" {{ block.shopify_attributes }}>
                {%- if block.settings.icon != blank -%}
                  <div class="contact-form__info-icon">
                    {{ block.settings.icon }}
                  </div>
                {%- endif -%}
                <div class="contact-form__info-content">
                  {%- if block.settings.title != blank -%}
                    <h4 class="contact-form__info-title">{{ block.settings.title | escape }}</h4>
                  {%- endif -%}
                  {%- if block.settings.content != blank -%}
                    <div class="contact-form__info-text">{{ block.settings.content }}</div>
                  {%- endif -%}
                </div>
              </div>
            {%- endfor -%}
          </div>
        </div>
      {%- endif -%}
    </div>
  </div>
</div>

<style>
  .contact-form__wrapper {
    display: grid;
    grid-template-columns: 2fr 1fr;
    gap: 3rem;
    margin-top: 2rem;
  }
  
  .contact-form__description {
    margin-bottom: 2rem;
    font-size: 1.125rem;
    line-height: 1.6;
  }
  
  .contact-form__success {
    background: var(--color-success-background);
    border: 1px solid var(--color-success);
    border-radius: 0.5rem;
    padding: 2rem;
    text-align: center;
    color: var(--color-success);
  }
  
  .contact-form__success-title {
    margin-bottom: 0.5rem;
    font-size: 1.25rem;
  }
  
  .contact-form__errors {
    background: var(--color-error-background);
    border: 1px solid var(--color-error);
    border-radius: 0.5rem;
    padding: 1.5rem;
    margin-bottom: 2rem;
    color: var(--color-error);
  }
  
  .contact-form__errors-title {
    margin-bottom: 1rem;
    font-size: 1.125rem;
  }
  
  .contact-form__errors-list {
    margin: 0;
    padding-left: 1.5rem;
  }
  
  .contact-form__field-group {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
  }
  
  .contact-form__field {
    margin-bottom: 1.5rem;
  }
  
  .contact-form__label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
  }
  
  .contact-form__input,
  .contact-form__textarea {
    width: 100%;
    padding: 0.75rem 1rem;
    border: 1px solid var(--color-border);
    border-radius: 0.375rem;
    font-size: 1rem;
    transition: border-color 0.2s ease;
  }
  
  .contact-form__input:focus,
  .contact-form__textarea:focus {
    outline: none;
    border-color: var(--color-primary);
    box-shadow: 0 0 0 3px rgba(var(--color-primary-rgb), 0.1);
  }
  
  .contact-form__textarea {
    resize: vertical;
    min-height: 120px;
  }
  
  .contact-form__field--checkbox {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
  }
  
  .contact-form__checkbox {
    margin: 0;
    flex-shrink: 0;
  }
  
  .contact-form__checkbox-label {
    margin: 0;
    font-size: 0.875rem;
    line-height: 1.5;
  }
  
  .contact-form__error {
    display: block;
    margin-top: 0.5rem;
    font-size: 0.875rem;
    color: var(--color-error);
  }
  
  .contact-form__submit {
    margin-top: 1rem;
  }
  
  .contact-form__button {
    min-width: 200px;
  }
  
  .contact-form__info {
    background: var(--color-background-secondary);
    border-radius: 0.5rem;
    padding: 2rem;
  }
  
  .contact-form__info-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    margin-bottom: 2rem;
  }
  
  .contact-form__info-item:last-child {
    margin-bottom: 0;
  }
  
  .contact-form__info-icon {
    flex-shrink: 0;
    width: 2rem;
    height: 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--color-primary);
    color: white;
    border-radius: 50%;
  }
  
  .contact-form__info-title {
    margin-bottom: 0.5rem;
    font-size: 1.125rem;
  }
  
  .contact-form__info-text {
    color: var(--color-foreground-75);
    line-height: 1.5;
  }
  
  @media screen and (max-width: 989px) {
    .contact-form__wrapper {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .contact-form__field-group {
      grid-template-columns: 1fr;
      gap: 0;
    }
  }
  
  @media screen and (max-width: 749px) {
    .contact-form__info {
      padding: 1.5rem;
    }
    
    .contact-form__button {
      width: 100%;
      min-width: auto;
    }
  }
</style>

