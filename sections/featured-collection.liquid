{%- comment -%}
  Featured Collection - Pitagora Theme  
  Displays a curated selection of products from a specific collection
{%- endcomment -%}

{{ 'featured-collection.css' | asset_url | stylesheet_tag }}

{%- liquid
  assign collection = collections[section.settings.collection] | default: collections.first
  assign products_to_show = section.settings.products_to_show
  assign columns_desktop = section.settings.columns_desktop
  assign columns_mobile = section.settings.columns_mobile
  assign show_view_all = section.settings.show_view_all
  assign enable_desktop_slider = section.settings.enable_desktop_slider
  assign image_ratio = section.settings.image_ratio
  assign show_secondary_image = section.settings.show_secondary_image
  assign show_vendor = section.settings.show_vendor
  assign show_rating = section.settings.show_rating
  assign enable_quick_add = section.settings.enable_quick_add
-%}

<div class="featured-collection color-{{ section.settings.color_scheme }} gradient section-{{ section.id }}-padding">
  <div class="featured-collection__inner{% if section.settings.full_width %} page-width-fluid{% else %} page-width{% endif %}">
    {%- if section.settings.title != blank or section.settings.description != blank -%}
      <div class="featured-collection__header">
        {%- if section.settings.title != blank -%}
          <h2 class="featured-collection__title {{ section.settings.heading_size }}">
            {{ section.settings.title | escape }}
          </h2>
        {%- endif -%}

        {%- if section.settings.show_description and section.settings.description != blank -%}
          <div class="featured-collection__description {{ section.settings.description_style }}">
            {{ section.settings.description }}
          </div>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if collection.products.size > 0 -%}
      <product-collection 
        class="featured-collection__products{% if enable_desktop_slider %} featured-collection__products--slider{% endif %}"
        data-collection="{{ collection.handle }}"
      >
        <ul class="product-grid grid{% if enable_desktop_slider %} grid--slider{% endif %} grid--{{ columns_desktop }}-col-desktop grid--{{ columns_mobile }}-col-tablet-down">
          {%- for product in collection.products limit: products_to_show -%}
            <li class="grid__item{% if enable_desktop_slider %} grid__item--slider{% endif %}">
              {%- render 'product-card',
                  product: product,
                  show_quick_add: enable_quick_add,
                  show_vendor: show_vendor,
                  show_rating: show_rating,
                  show_secondary_image: show_secondary_image,
                  image_aspect_ratio: image_ratio,
                  collection: collection
              -%}
            </li>
          {%- endfor -%}
        </ul>

        {%- if enable_desktop_slider and collection.products.size > columns_desktop -%}
          <div class="featured-collection__controls">
            <button type="button" class="featured-collection__control featured-collection__control--prev" aria-label="{{ 'general.slider.previous_slide' | t }}">
              <svg viewBox="0 0 24 24" fill="currentColor" width="24" height="24">
                <path d="M15.41 7.41L14 6l-6 6 6 6 1.41-1.41L10.83 12z"/>
              </svg>
            </button>
            <button type="button" class="featured-collection__control featured-collection__control--next" aria-label="{{ 'general.slider.next_slide' | t }}">
              <svg viewBox="0 0 24 24" fill="currentColor" width="24" height="24">
                <path d="M10 6L8.59 7.41 13.17 12l-4.58 4.59L10 18l6-6z"/>
              </svg>
            </button>
          </div>
        {%- endif -%}
      </product-collection>

      {%- if show_view_all and collection.products.size > products_to_show -%}
        <div class="featured-collection__view-all">
          <a 
            href="{{ collection.url }}" 
            class="button button--{{ section.settings.view_all_style }}"
            aria-label="{{ 'sections.featured_collection.view_all_label' | t: collection_name: collection.title }}"
          >
            {{ 'sections.featured_collection.view_all' | t }}
          </a>
        </div>
      {%- endif -%}
    {%- else -%}
      <div class="featured-collection__empty">
        <h3>{{ 'sections.featured_collection.empty_title' | t }}</h3>
        <p>{{ 'sections.featured_collection.empty_description' | t }}</p>
        {%- if request.design_mode -%}
          <p><em>{{ 'sections.featured_collection.empty_design_mode' | t }}</em></p>
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>
</div>

<style>
  .featured-collection {
    padding: var(--spacing-sections) 0;
  }

  .featured-collection__header {
    text-align: center;
    margin-bottom: 2rem;
  }

  .featured-collection__title {
    margin-bottom: 1rem;
  }

  .featured-collection__description {
    max-width: 600px;
    margin: 0 auto;
    color: rgba(var(--color-base-text), 0.8);
  }

  .featured-collection__products--slider {
    position: relative;
    overflow: hidden;
  }

  .grid--slider {
    display: flex;
    overflow-x: auto;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
    scrollbar-width: none;
    -ms-overflow-style: none;
  }

  .grid--slider::-webkit-scrollbar {
    display: none;
  }

  .grid__item--slider {
    flex: 0 0 auto;
    scroll-snap-align: start;
    width: calc((100% - var(--grid-desktop-horizontal-spacing) * (var(--grid-columns) - 1)) / var(--grid-columns));
    margin-right: var(--grid-desktop-horizontal-spacing);
  }

  .grid__item--slider:last-child {
    margin-right: 0;
  }

  .featured-collection__controls {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-top: 2rem;
  }

  .featured-collection__control {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border: 1px solid rgba(var(--color-base-text), 0.2);
    border-radius: 50%;
    background: rgb(var(--color-base-background-1));
    color: rgb(var(--color-base-text));
    cursor: pointer;
    transition: all var(--transition-fast);
  }

  .featured-collection__control:hover {
    border-color: rgb(var(--color-base-accent-1));
    background: rgb(var(--color-base-accent-1));
    color: rgb(var(--color-base-solid-button-labels));
  }

  .featured-collection__view-all {
    display: flex;
    justify-content: center;
    margin-top: 2rem;
  }

  .featured-collection__empty {
    text-align: center;
    padding: 4rem 0;
    color: rgba(var(--color-base-text), 0.7);
  }

  @media screen and (max-width: 989px) {
    .grid--slider {
      scroll-snap-type: none;
    }
    
    .grid__item--slider {
      width: calc((100% - var(--grid-mobile-horizontal-spacing) * (2 - 1)) / 2);
      margin-right: var(--grid-mobile-horizontal-spacing);
    }
  }

  @media screen and (max-width: 749px) {
    .featured-collection__controls {
      display: none;
    }
  }
</style>

{%- if enable_desktop_slider -%}
  <script>
    class ProductCollection extends HTMLElement {
      constructor() {
        super();
        this.slider = this.querySelector('.grid--slider');
        this.prevButton = this.querySelector('.featured-collection__control--prev');
        this.nextButton = this.querySelector('.featured-collection__control--next');
        
        if (this.prevButton && this.nextButton) {
          this.prevButton.addEventListener('click', () => this.slideLeft());
          this.nextButton.addEventListener('click', () => this.slideRight());
        }
      }
      
      slideLeft() {
        const slideWidth = this.slider.querySelector('.grid__item--slider').offsetWidth;
        this.slider.scrollBy({ left: -slideWidth, behavior: 'smooth' });
      }
      
      slideRight() {
        const slideWidth = this.slider.querySelector('.grid__item--slider').offsetWidth;
        this.slider.scrollBy({ left: slideWidth, behavior: 'smooth' });
      }
    }
    
    customElements.define('product-collection', ProductCollection);
  </script>
{%- endif -%}

