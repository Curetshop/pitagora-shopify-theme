{%- comment -%}
  Main Reset Password Section
  Handles customer password reset functionality
{%- endcomment -%}

<div class="customer-reset-password section-{{ section.id }}-padding">
  <div class="page-width{% if section.settings.show_form_wrapper %} form-wrapper{% endif %}">
    
    {%- if section.settings.show_divider -%}
      <hr class="account-divider">
    {%- endif -%}

    <div class="reset-password-container">
      
      {%- comment -%} Header {%- endcomment -%}
      <div class="reset-password-header">
        <h1 class="reset-password-title">
          {{ 'customer.recover_password.title' | t }}
        </h1>
        <p class="reset-password-subtitle">
          {{ 'customer.recover_password.subtext' | t }}
        </p>
      </div>

      {%- comment -%} Reset Password Form {%- endcomment -%}
      <div class="reset-password-form-wrapper">
        {%- form 'recover_customer_password', class: 'reset-password-form' -%}
          
          {%- if form.errors -%}
            <div class="form-status form-status--error" tabindex="-1" autofocus>
              <svg class="form-status__icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
                <circle cx="10" cy="10" r="9" stroke="currentColor" stroke-width="2"/>
                <path d="m9 9 2 2" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                <path d="m11 9-2 2" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
              </svg>
              <div class="form-status__content">
                <h3 class="form-status__title">{{ 'templates.contact.form.error_heading' | t }}</h3>
                {{ form.errors | default_errors }}
              </div>
            </div>
          {%- endif -%}

          {%- if form.posted_successfully? -%}
            <div class="form-status form-status--success">
              <svg class="form-status__icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
                <circle cx="10" cy="10" r="9" stroke="currentColor" stroke-width="2"/>
                <path d="m7 10 2 2 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
              <div class="form-status__content">
                <h3 class="form-status__title">{{ 'customer.recover_password.success' | t }}</h3>
                <p>{{ 'customer.recover_password.success_text' | t }}</p>
              </div>
            </div>

            <div class="reset-password-actions">
              <a href="{{ routes.account_login_url }}" class="button button--primary">
                {{ 'customer.login_page.title' | t }}
              </a>
              <a href="{{ routes.root_url }}" class="button button--secondary">
                {{ 'customer.recover_password.continue_shopping' | t }}
              </a>
            </div>
          {%- else -%}
            
            <div class="reset-form-fields">
              <div class="field">
                <input 
                  type="email"
                  name="email"
                  id="RecoverEmail"
                  class="field__input"
                  autocomplete="email"
                  autocapitalize="off"
                  autocorrect="off"
                  placeholder="{{ 'customer.login_page.email' | t }}"
                  required
                  {%- if form.errors contains 'form' %} aria-invalid="true" aria-describedby="RecoverEmail-error"{% endif %}
                >
                <label class="field__label" for="RecoverEmail">
                  {{ 'customer.login_page.email' | t }}
                </label>
                {%- if form.errors contains 'form' -%}
                  <small class="field__error" id="RecoverEmail-error">
                    <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
                    {{ 'customer.recover_password.email_error' | t }}
                  </small>
                {%- endif -%}
              </div>
            </div>

            <div class="reset-form-info">
              <div class="reset-info-box">
                <svg class="reset-info-icon" width="24" height="24" viewBox="0 0 24 24" fill="none">
                  <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2"/>
                  <path d="m9 12 2 2 4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                <div class="reset-info-content">
                  <h4 class="reset-info-title">{{ 'customer.recover_password.what_happens' | t }}</h4>
                  <p class="reset-info-text">{{ 'customer.recover_password.instructions' | t }}</p>
                </div>
              </div>
            </div>

            <div class="reset-form-actions">
              <input 
                type="submit" 
                class="button button--primary reset-submit-button" 
                value="{{ 'customer.recover_password.submit' | t }}"
              >
              <a href="{{ routes.account_login_url }}" class="reset-back-link">
                {{ 'customer.recover_password.cancel' | t }}
              </a>
            </div>
          {%- endif -%}

        {%- endform -%}
      </div>

      {%- comment -%} Additional Help {%- endcomment -%}
      {%- unless form.posted_successfully? -%}
        <div class="reset-password-help">
          <div class="reset-help-section">
            <h3 class="reset-help-title">{{ 'customer.recover_password.trouble_title' | t }}</h3>
            <ul class="reset-help-list">
              <li>{{ 'customer.recover_password.trouble_1' | t }}</li>
              <li>{{ 'customer.recover_password.trouble_2' | t }}</li>
              <li>{{ 'customer.recover_password.trouble_3' | t }}</li>
            </ul>
          </div>

          <div class="reset-contact-section">
            <h4 class="reset-contact-title">{{ 'customer.recover_password.need_help' | t }}</h4>
            <p class="reset-contact-text">
              {{ 'customer.recover_password.contact_support' | t }}
              <a href="mailto:{{ shop.customer_email | default: shop.email }}" class="reset-contact-link">
                {{ shop.customer_email | default: shop.email }}
              </a>
            </p>
          </div>
        </div>
      {%- endunless -%}

      {%- comment -%} Create Account CTA {%- endcomment -%}
      {%- unless form.posted_successfully? -%}
        <div class="reset-create-account">
          <div class="reset-create-content">
            <h3 class="reset-create-title">{{ 'customer.recover_password.new_customer' | t }}</h3>
            <p class="reset-create-text">{{ 'customer.recover_password.create_account_text' | t }}</p>
            <a href="{{ routes.account_register_url }}" class="button button--secondary">
              {{ 'customer.register.title' | t }}
            </a>
          </div>
        </div>
      {%- endunless -%}

    </div>
  </div>
</div>

<style>
  .customer-reset-password {
    padding: var(--spacing-lg) 0;
    background: rgb(var(--color-base-background-1));
  }

  .form-wrapper {
    max-width: 60rem;
    margin: 0 auto;
  }

  .account-divider {
    border: none;
    height: 1px;
    background: rgba(var(--color-base-text), 0.1);
    margin-bottom: var(--spacing-lg);
  }

  .reset-password-container {
    background: rgba(var(--color-base-background-2), 0.3);
    border-radius: 2rem;
    padding: 4rem;
    border: 1px solid rgba(var(--color-base-text), 0.08);
    box-shadow: 0 8px 32px rgba(var(--color-base-text), 0.1);
  }

  .reset-password-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .reset-password-title {
    font-size: 2.8rem;
    font-weight: 600;
    color: rgb(var(--color-base-text));
    margin-bottom: 1rem;
  }

  .reset-password-subtitle {
    color: rgba(var(--color-base-text), 0.7);
    font-size: 1.6rem;
    line-height: 1.5;
    margin: 0;
  }

  .reset-password-form-wrapper {
    margin-bottom: 3rem;
  }

  .reset-form-fields {
    margin-bottom: 2rem;
  }

  .field {
    position: relative;
    margin-bottom: 2rem;
  }

  .field__input {
    width: 100%;
    padding: 1.8rem 2rem;
    border: 2px solid rgba(var(--color-base-text), 0.1);
    border-radius: 1.2rem;
    font-size: 1.6rem;
    background: rgba(var(--color-base-background-1), 0.9);
    color: rgb(var(--color-base-text));
    transition: all 0.3s ease;
  }

  .field__input:focus {
    outline: none;
    border-color: rgb(var(--color-base-accent-1));
    box-shadow: 0 0 0 4px rgba(var(--color-base-accent-1), 0.1);
    background: rgb(var(--color-base-background-1));
  }

  .field__input[aria-invalid="true"] {
    border-color: #e11d48;
    box-shadow: 0 0 0 4px rgba(225, 29, 72, 0.1);
  }

  .field__label {
    position: absolute;
    top: 50%;
    left: 2rem;
    transform: translateY(-50%);
    color: rgba(var(--color-base-text), 0.5);
    pointer-events: none;
    transition: all 0.3s ease;
    font-size: 1.4rem;
  }

  .field__input:focus + .field__label,
  .field__input:not(:placeholder-shown) + .field__label {
    top: -0.8rem;
    left: 1.5rem;
    font-size: 1.2rem;
    background: rgb(var(--color-base-background-1));
    padding: 0 0.5rem;
    color: rgb(var(--color-base-accent-1));
  }

  .field__error {
    display: block;
    color: #e11d48;
    font-size: 1.3rem;
    margin-top: 0.8rem;
    font-weight: 500;
  }

  .reset-form-info {
    margin-bottom: 3rem;
  }

  .reset-info-box {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    background: rgba(var(--color-base-accent-1), 0.05);
    border: 1px solid rgba(var(--color-base-accent-1), 0.2);
    border-radius: 1.2rem;
    padding: 2rem;
  }

  .reset-info-icon {
    color: rgb(var(--color-base-accent-1));
    flex-shrink: 0;
    margin-top: 0.2rem;
  }

  .reset-info-title {
    font-size: 1.6rem;
    font-weight: 600;
    color: rgb(var(--color-base-text));
    margin-bottom: 0.5rem;
  }

  .reset-info-text {
    color: rgba(var(--color-base-text), 0.7);
    line-height: 1.5;
    margin: 0;
  }

  .reset-form-actions {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
  }

  .reset-submit-button {
    width: 100%;
    padding: 1.8rem;
    background: rgb(var(--color-base-accent-1));
    color: rgb(var(--color-base-solid-button-labels));
    border: none;
    border-radius: 1.2rem;
    font-size: 1.6rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .reset-submit-button:hover {
    background: rgba(var(--color-base-accent-1), 0.9);
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(var(--color-base-accent-1), 0.3);
  }

  .reset-back-link {
    color: rgba(var(--color-base-text), 0.6);
    text-decoration: none;
    font-size: 1.4rem;
    transition: color 0.3s ease;
  }

  .reset-back-link:hover {
    color: rgb(var(--color-base-accent-1));
  }

  .reset-password-actions {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    margin-top: 2rem;
  }

  .reset-password-actions .button {
    padding: 1.5rem 2rem;
    font-size: 1.6rem;
  }

  .reset-password-help {
    border-top: 1px solid rgba(var(--color-base-text), 0.1);
    padding-top: 3rem;
    margin-bottom: 3rem;
  }

  .reset-help-section {
    margin-bottom: 2rem;
  }

  .reset-help-title {
    font-size: 1.8rem;
    font-weight: 600;
    color: rgb(var(--color-base-text));
    margin-bottom: 1.5rem;
  }

  .reset-help-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .reset-help-list li {
    position: relative;
    padding-left: 2rem;
    color: rgba(var(--color-base-text), 0.7);
    line-height: 1.6;
    margin-bottom: 0.8rem;
  }

  .reset-help-list li::before {
    content: '•';
    position: absolute;
    left: 0;
    color: rgb(var(--color-base-accent-1));
    font-weight: bold;
  }

  .reset-contact-section {
    background: rgba(var(--color-base-background-1), 0.5);
    border-radius: 1rem;
    padding: 2rem;
    border: 1px solid rgba(var(--color-base-text), 0.05);
  }

  .reset-contact-title {
    font-size: 1.6rem;
    font-weight: 600;
    color: rgb(var(--color-base-text));
    margin-bottom: 1rem;
  }

  .reset-contact-text {
    color: rgba(var(--color-base-text), 0.7);
    line-height: 1.5;
    margin: 0;
  }

  .reset-contact-link {
    color: rgb(var(--color-base-accent-1));
    text-decoration: none;
    font-weight: 500;
  }

  .reset-contact-link:hover {
    text-decoration: underline;
  }

  .reset-create-account {
    border-top: 1px solid rgba(var(--color-base-text), 0.1);
    padding-top: 3rem;
  }

  .reset-create-content {
    text-align: center;
    background: rgba(var(--color-base-accent-1), 0.05);
    border: 1px solid rgba(var(--color-base-accent-1), 0.1);
    border-radius: 1.5rem;
    padding: 3rem;
  }

  .reset-create-title {
    font-size: 2rem;
    font-weight: 600;
    color: rgb(var(--color-base-text));
    margin-bottom: 1rem;
  }

  .reset-create-text {
    color: rgba(var(--color-base-text), 0.7);
    line-height: 1.5;
    margin-bottom: 2rem;
  }

  .form-status {
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
    padding: 2rem;
    border-radius: 1.2rem;
    margin-bottom: 2rem;
  }

  .form-status--error {
    background: rgba(225, 29, 72, 0.1);
    color: #e11d48;
    border: 1px solid rgba(225, 29, 72, 0.2);
  }

  .form-status--success {
    background: rgba(16, 185, 129, 0.1);
    color: #10b981;
    border: 1px solid rgba(16, 185, 129, 0.2);
  }

  .form-status__icon {
    flex-shrink: 0;
    margin-top: 0.2rem;
  }

  .form-status__title {
    font-size: 1.6rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  @media (max-width: 768px) {
    .reset-password-container {
      padding: 2.5rem 2rem;
    }

    .reset-password-title {
      font-size: 2.4rem;
    }

    .reset-password-subtitle {
      font-size: 1.4rem;
    }

    .reset-password-actions {
      flex-direction: column;
    }

    .reset-password-actions .button {
      width: 100%;
    }
  }
</style>

{% schema %}
{
  "name": "t:sections.main-reset-password.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_form_wrapper",
      "default": true,
      "label": "t:sections.main-reset-password.settings.show_form_wrapper.label"
    },
    {
      "type": "checkbox",
      "id": "show_divider",
      "default": true,
      "label": "t:sections.main-reset-password.settings.show_divider.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}