        },
        {
          "type": "quick_links",
          "settings": {
            "title": "Quick links",
            "link_1_text": "New arrivals",
            "link_2_text": "Best sellers",
            "link_3_text": "Sale"
          }
        }
      ]
    }
  ]
}
