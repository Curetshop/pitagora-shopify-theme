{%- comment -%}
Page Content Blocks Section - Pitagora Theme
Flexible content blocks for page layouts with various block types
{%- endcomment -%}

<style>
  #shopify-section-{{ section.id }} {
    --page-blocks-bg: {{ section.settings.background_color | default: 'transparent' }};
    --page-blocks-text: {{ section.settings.text_color | default: 'inherit' }};
  }
</style>

<div 
  class="page-content-blocks section-padding"
  style="background: var(--page-blocks-bg); color: var(--page-blocks-text);"
>
  <div class="page-width">
    {%- if section.settings.heading != blank or section.settings.subheading != blank -%}
      <div class="section-header text-center">
        {%- if section.settings.subheading != blank -%}
          <p class="section-header__subheading">{{ section.settings.subheading | escape }}</p>
        {%- endif -%}
        
        {%- if section.settings.heading != blank -%}
          <h2 class="section-header__heading h2">{{ section.settings.heading | escape }}</h2>
        {%- endif -%}
      </div>
    {%- endif -%}

    {%- if section.blocks.size > 0 -%}
      <div class="page-content-blocks__wrapper">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'text_block' -%}
              <div class="page-content-block page-content-block--text" {{ block.shopify_attributes }}>
                {%- if block.settings.title != blank -%}
                  <h3 class="page-content-block__title h4">{{ block.settings.title | escape }}</h3>
                {%- endif -%}
                {%- if block.settings.content != blank -%}
                  <div class="page-content-block__content rte">
                    {{ block.settings.content }}
                  </div>
                {%- endif -%}
              </div>

            {%- when 'image_block' -%}
              <div class="page-content-block page-content-block--image" {{ block.shopify_attributes }}>
                {%- if block.settings.image != blank -%}
                  <div class="page-content-block__image">
                    <img
                      src="{{ block.settings.image | image_url: width: 800 }}"
                      alt="{{ block.settings.image.alt | escape }}"
                      loading="lazy"
                      width="{{ block.settings.image.width }}"
                      height="{{ block.settings.image.height }}"
                      sizes="100vw"
                      srcset="
                        {{ block.settings.image | image_url: width: 400 }} 400w,
                        {{ block.settings.image | image_url: width: 600 }} 600w,
                        {{ block.settings.image | image_url: width: 800 }} 800w,
                        {{ block.settings.image | image_url: width: 1000 }} 1000w
                      "
                    >
                  </div>
                {%- endif -%}
                {%- if block.settings.caption != blank -%}
                  <div class="page-content-block__caption">{{ block.settings.caption | escape }}</div>
                {%- endif -%}
              </div>

            {%- when 'video_block' -%}
              <div class="page-content-block page-content-block--video" {{ block.shopify_attributes }}>
                {%- if block.settings.video_url != blank -%}
                  <div class="page-content-block__video">
                    {%- if block.settings.video_url.type == 'youtube' -%}
                      <iframe
                        src="https://www.youtube.com/embed/{{ block.settings.video_url.id }}"
                        class="page-content-block__iframe"
                        allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                        allowfullscreen
                        title="{{ block.settings.video_title | default: 'Video' | escape }}"
                      ></iframe>
                    {%- elsif block.settings.video_url.type == 'vimeo' -%}
                      <iframe
                        src="https://player.vimeo.com/video/{{ block.settings.video_url.id }}"
                        class="page-content-block__iframe"
                        allow="autoplay; fullscreen; picture-in-picture"
                        allowfullscreen
                        title="{{ block.settings.video_title | default: 'Video' | escape }}"
                      ></iframe>
                    {%- endif -%}
                  </div>
                {%- endif -%}
                {%- if block.settings.video_title != blank -%}
                  <div class="page-content-block__caption">{{ block.settings.video_title | escape }}</div>
                {%- endif -%}
              </div>

            {%- when 'quote_block' -%}
              <div class="page-content-block page-content-block--quote" {{ block.shopify_attributes }}>
                <blockquote class="page-content-block__quote">
                  {%- if block.settings.quote != blank -%}
                    <p class="page-content-block__quote-text">{{ block.settings.quote | escape }}</p>
                  {%- endif -%}
                  {%- if block.settings.author != blank -%}
                    <cite class="page-content-block__quote-author">{{ block.settings.author | escape }}</cite>
                  {%- endif -%}
                </blockquote>
              </div>

            {%- when 'button_block' -%}
              <div class="page-content-block page-content-block--button" {{ block.shopify_attributes }}>
                {%- if block.settings.button_text != blank -%}
                  <div class="page-content-block__button">
                    <a 
                      href="{{ block.settings.button_url | default: '#' }}" 
                      class="button button--{{ block.settings.button_style }} button--{{ block.settings.button_size }}"
                    >
                      {{ block.settings.button_text | escape }}
                    </a>
                  </div>
                {%- endif -%}
              </div>

            {%- when 'spacer_block' -%}
              <div class="page-content-block page-content-block--spacer" {{ block.shopify_attributes }}>
                <div class="page-content-block__spacer" style="height: {{ block.settings.height }}px;"></div>
              </div>

          {%- endcase -%}
        {%- endfor -%}
      </div>
    {%- else -%}
      <div class="page-content-blocks__placeholder">
        <p>Add content blocks to build your page layout</p>
      </div>
    {%- endif -%}
  </div>
</div>

<style>
  .page-content-blocks__wrapper {
    margin-top: 2rem;
  }
  
  .page-content-block {
    margin-bottom: 2rem;
  }
  
  .page-content-block:last-child {
    margin-bottom: 0;
  }
  
  /* Text Block Styles */
  .page-content-block--text .page-content-block__title {
    margin-bottom: 1rem;
  }
  
  .page-content-block--text .page-content-block__content {
    line-height: 1.6;
  }
  
  /* Image Block Styles */
  .page-content-block--image .page-content-block__image {
    margin-bottom: 1rem;
  }
  
  .page-content-block--image img {
    width: 100%;
    height: auto;
    border-radius: 0.5rem;
  }
  
  .page-content-block--image .page-content-block__caption {
    text-align: center;
    font-size: 0.875rem;
    color: var(--color-foreground-75);
    font-style: italic;
  }
  
  /* Video Block Styles */
  .page-content-block--video .page-content-block__video {
    position: relative;
    padding-bottom: 56.25%;
    height: 0;
    overflow: hidden;
    border-radius: 0.5rem;
    margin-bottom: 1rem;
  }
  
  .page-content-block--video .page-content-block__iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: 0;
  }
  
  /* Quote Block Styles */
  .page-content-block--quote {
    text-align: center;
    padding: 2rem 1rem;
  }
  
  .page-content-block--quote .page-content-block__quote {
    margin: 0;
    border: none;
    padding: 0;
    position: relative;
  }
  
  .page-content-block--quote .page-content-block__quote-text {
    font-size: 1.25rem;
    font-style: italic;
    margin-bottom: 1rem;
    position: relative;
  }
  
  .page-content-block--quote .page-content-block__quote-text::before {
    content: '"';
    font-size: 3rem;
    line-height: 1;
    position: absolute;
    top: -1rem;
    left: -1.5rem;
    color: var(--color-foreground-25);
  }
  
  .page-content-block--quote .page-content-block__quote-author {
    display: block;
    font-size: 0.875rem;
    color: var(--color-foreground-75);
    font-style: normal;
  }
  
  .page-content-block--quote .page-content-block__quote-author::before {
    content: 'â€” ';
  }
  
  /* Button Block Styles */
  .page-content-block--button {
    text-align: center;
  }
  
  /* Spacer Block Styles */
  .page-content-block--spacer .page-content-block__spacer {
    width: 100%;
  }
  
  /* Placeholder Styles */
  .page-content-blocks__placeholder {
    text-align: center;
    padding: 2rem;
    border: 2px dashed var(--color-border);
    border-radius: 0.5rem;
  }
  
  @media screen and (max-width: 749px) {
    .page-content-block--quote .page-content-block__quote-text {
      font-size: 1.125rem;
    }
    
    .page-content-block--quote .page-content-block__quote-text::before {
      font-size: 2.5rem;
      top: -0.75rem;
      left: -1rem;
    }
  }
</style>

