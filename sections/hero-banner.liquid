{%- comment -%}
Hero Banner Section - Pitagora Theme
Main hero section with background image, overlay, and call-to-action
{%- endcomment -%}

<style>
  #shopify-section-{{ section.id }} {
    --hero-text-color: {{ section.settings.text_color | default: '#ffffff' }};
    --hero-overlay-opacity: {{ section.settings.overlay_opacity | default: 50 | divided_by: 100.0 }};
    --hero-content-position: {{ section.settings.content_position | default: 'center' }};
    --hero-min-height: {{ section.settings.height | default: '500' }}px;
  }
</style>

<div class="hero-banner hero-banner--{{ section.settings.height_mobile }} hero-banner--{{ section.settings.content_alignment }}">
  <div class="hero-banner__media">
    {%- if section.settings.image != blank -%}
      <img
        src="{{ section.settings.image | image_url: width: 1920 }}"
        srcset="
          {{ section.settings.image | image_url: width: 375 }} 375w,
          {{ section.settings.image | image_url: width: 750 }} 750w,
          {{ section.settings.image | image_url: width: 1100 }} 1100w,
          {{ section.settings.image | image_url: width: 1500 }} 1500w,
          {{ section.settings.image | image_url: width: 1920 }} 1920w
        "
        sizes="100vw"
        alt="{{ section.settings.image.alt | escape }}"
        loading="eager"
        fetchpriority="high"
        width="{{ section.settings.image.width }}"
        height="{{ section.settings.image.height }}"
        class="hero-banner__image"
      >
    {%- else -%}
      <div class="hero-banner__placeholder" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <svg width="100" height="100" viewBox="0 0 100 100" fill="none" xmlns="http://www.w3.org/2000/svg">
          <rect x="10" y="30" width="80" height="40" rx="4" stroke="white" stroke-width="2" fill="none"/>
          <circle cx="25" cy="45" r="3" fill="white"/>
          <path d="m35 55 10-10 15 15 20-20" stroke="white" stroke-width="2" fill="none"/>
        </svg>
      </div>
    {%- endif -%}
    
    {%- if section.settings.overlay_opacity > 0 -%}
      <div class="hero-banner__overlay" style="opacity: var(--hero-overlay-opacity);"></div>
    {%- endif -%}
  </div>

  <div class="hero-banner__content" style="color: var(--hero-text-color);">
    <div class="hero-banner__content-wrapper page-width">
      <div class="hero-banner__text">
        {%- if section.settings.subheading != blank -%}
          <p class="hero-banner__subheading">{{ section.settings.subheading | escape }}</p>
        {%- endif -%}
        
        {%- if section.settings.heading != blank -%}
          <h1 class="hero-banner__heading">{{ section.settings.heading | escape }}</h1>
        {%- endif -%}
        
        {%- if section.settings.text != blank -%}
          <div class="hero-banner__text-content rte">{{ section.settings.text }}</div>
        {%- endif -%}
        
        {%- if section.settings.button_label != blank and section.settings.button_link != blank -%}
          <div class="hero-banner__buttons">
            <a 
              href="{{ section.settings.button_link }}" 
              class="hero-banner__button button button--{{ section.settings.button_style }} button--large"
            >
              {{ section.settings.button_label | escape }}
            </a>
            
            {%- if section.settings.button_label_2 != blank and section.settings.button_link_2 != blank -%}
              <a 
                href="{{ section.settings.button_link_2 }}" 
                class="hero-banner__button button button--{{ section.settings.button_style_2 }} button--large"
              >
                {{ section.settings.button_label_2 | escape }}
              </a>
            {%- endif -%}
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

<style>
  .hero-banner {
    position: relative;
    display: flex;
    align-items: var(--hero-content-position, center);
    min-height: var(--hero-min-height, 500px);
    overflow: hidden;
  }

  .hero-banner__media {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .hero-banner__image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }

  .hero-banner__placeholder {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero-banner__overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1;
  }

  .hero-banner__content {
    position: relative;
    z-index: 2;
    width: 100%;
    padding: 4rem 0;
  }

  .hero-banner__content-wrapper {
    display: flex;
    align-items: center;
    min-height: 50vh;
  }

  .hero-banner__text {
    max-width: 600px;
  }

  .hero-banner--left .hero-banner__text {
    margin-left: 0;
    margin-right: auto;
  }

  .hero-banner--center .hero-banner__text {
    margin: 0 auto;
    text-align: center;
  }

  .hero-banner--right .hero-banner__text {
    margin-left: auto;
    margin-right: 0;
  }

  .hero-banner__subheading {
    font-size: 1.125rem;
    font-weight: 500;
    margin-bottom: 1rem;
    opacity: 0.9;
  }

  .hero-banner__heading {
    font-size: clamp(2.5rem, 5vw, 4rem);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1.5rem;
  }

  .hero-banner__text-content {
    font-size: 1.25rem;
    line-height: 1.6;
    margin-bottom: 2rem;
    opacity: 0.9;
  }

  .hero-banner__buttons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .hero-banner--center .hero-banner__buttons {
    justify-content: center;
  }

  .hero-banner--right .hero-banner__buttons {
    justify-content: flex-end;
  }

  /* Height variations */
  .hero-banner--small {
    min-height: 400px;
  }

  .hero-banner--medium {
    min-height: 500px;
  }

  .hero-banner--large {
    min-height: 600px;
  }

  .hero-banner--full {
    min-height: 100vh;
  }

  /* Mobile adjustments */
  @media screen and (max-width: 749px) {
    .hero-banner {
      min-height: 400px;
    }
    
    .hero-banner--full {
      min-height: 70vh;
    }

    .hero-banner__content {
      padding: 2rem 0;
    }

    .hero-banner__heading {
      font-size: clamp(2rem, 8vw, 2.5rem);
      margin-bottom: 1rem;
    }

    .hero-banner__text-content {
      font-size: 1.125rem;
      margin-bottom: 1.5rem;
    }

    .hero-banner__buttons {
      flex-direction: column;
      align-items: stretch;
    }

    .hero-banner--center .hero-banner__buttons {
      align-items: center;
    }

    .hero-banner--right .hero-banner__buttons {
      align-items: flex-end;
    }

    .hero-banner__text {
      max-width: 100%;
    }
  }
</style>

