{%- comment -%}
Hero Banner Section - Pitagora Theme
Slideshow hero con video support, parallax y animaciones modernas
{%- endcomment -%}

{{ 'hero-banner.css' | asset_url | stylesheet_tag }}
<script src="{{ 'hero-banner.js' | asset_url }}" defer="defer"></script>

<style>
  #shopify-section-{{ section.id }} {
    --hero-height-mobile: {% case section.settings.mobile_height %}{% when 'small' %}50vh{% when 'medium' %}70vh{% when 'large' %}90vh{% when 'screen' %}100vh{% else %}70vh{% endcase %};
    --hero-height-desktop: {% case section.settings.desktop_height %}{% when 'small' %}50vh{% when 'medium' %}70vh{% when 'large' %}90vh{% when 'screen' %}100vh{% else %}70vh{% endcase %};
  }
</style>

<hero-banner 
  class="hero-banner hero-banner--{{ section.settings.layout }}"
  data-section-id="{{ section.id }}"
  data-autoplay="{% if section.settings.enable_autoplay %}true{% else %}false{% endif %}"
  data-autoplay-duration="{{ section.settings.autoplay_duration | default: 5 }}"
>
  {%- if section.blocks.size > 0 -%}
    <div class="hero-banner__slides">
      {%- for block in section.blocks -%}
        {%- liquid
          assign text_position_parts = block.settings.text_position | split: '_'
          assign vertical_position = text_position_parts[0]
          assign horizontal_position = text_position_parts[1]
        -%}
        
        <div 
          class="hero-slide hero-slide--{{ vertical_position }}-{{ horizontal_position }} hero-slide--align-{{ block.settings.text_alignment }}{% if forloop.first %} hero-slide--active{% endif %}"
          data-slide-index="{{ forloop.index0 }}"
          {{ block.shopify_attributes }}
          style="
            --overlay-opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
            --overlay-color: {{ block.settings.overlay_color }};
            --text-color: {{ block.settings.text_color }};
          "
        >
          {%- comment -%} Background Media {%- endcomment -%}
          <div class="hero-slide__media">
            {%- if block.settings.video_url != blank -%}
              {%- liquid
                assign video_id = block.settings.video_url | split: 'v=' | last | split: '&' | first
                if block.settings.video_url contains 'vimeo.com'
                  assign video_id = block.settings.video_url | split: '/' | last
                endif
              -%}
              
              <div class="hero-slide__video">
                {%- if block.settings.video_url contains 'youtube.com' or block.settings.video_url contains 'youtu.be' -%}
                  <iframe
                    src="https://www.youtube.com/embed/{{ video_id }}?autoplay=1&mute=1&loop=1&playlist={{ video_id }}&controls=0&showinfo=0&rel=0&iv_load_policy=3&modestbranding=1"
                    frameborder="0"
                    allow="autoplay; encrypted-media"
                    allowfullscreen
                  ></iframe>
                {%- elsif block.settings.video_url contains 'vimeo.com' -%}
                  <iframe
                    src="https://player.vimeo.com/video/{{ video_id }}?autoplay=1&muted=1&loop=1&background=1&controls=0"
                    frameborder="0"
                    allow="autoplay; fullscreen"
                    allowfullscreen
                  ></iframe>
                {%- endif -%}
              </div>
              
              {%- comment -%} Fallback image for mobile {%- endcomment -%}
              {%- if block.settings.mobile_image != blank or block.settings.image != blank -%}
                <div class="hero-slide__image hero-slide__image--mobile-fallback">
                  {%- assign fallback_image = block.settings.mobile_image | default: block.settings.image -%}
                  <img
                    src="{{ fallback_image | image_url: width: 800 }}"
                    alt="{{ fallback_image.alt | escape | default: block.settings.heading | escape }}"
                    width="{{ fallback_image.width }}"
                    height="{{ fallback_image.height }}"
                    loading="eager"
                    sizes="100vw"
                    srcset="
                      {{ fallback_image | image_url: width: 400 }} 400w,
                      {{ fallback_image | image_url: width: 800 }} 800w,
                      {{ fallback_image | image_url: width: 1200 }} 1200w,
                      {{ fallback_image | image_url: width: 1600 }} 1600w,
                      {{ fallback_image | image_url: width: 2000 }} 2000w
                    "
                  >
                </div>
              {%- endif -%}
            {%- elsif block.settings.image != blank -%}
              <div class="hero-slide__image">
                <img
                  src="{{ block.settings.image | image_url: width: 1600 }}"
                  alt="{{ block.settings.image.alt | escape | default: block.settings.heading | escape }}"
                  width="{{ block.settings.image.width }}"
                  height="{{ block.settings.image.height }}"
                  loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                  sizes="100vw"
                  srcset="
                    {{ block.settings.image | image_url: width: 400 }} 400w,
                    {{ block.settings.image | image_url: width: 800 }} 800w,
                    {{ block.settings.image | image_url: width: 1200 }} 1200w,
                    {{ block.settings.image | image_url: width: 1600 }} 1600w,
                    {{ block.settings.image | image_url: width: 2000 }} 2000w,
                    {{ block.settings.image | image_url: width: 2400 }} 2400w
                  "
                >
                
                {%- comment -%} Mobile specific image {%- endcomment -%}
                {%- if block.settings.mobile_image != blank -%}
                  <img
                    class="hero-slide__image--mobile"
                    src="{{ block.settings.mobile_image | image_url: width: 800 }}"
                    alt="{{ block.settings.mobile_image.alt | escape | default: block.settings.heading | escape }}"
                    width="{{ block.settings.mobile_image.width }}"
                    height="{{ block.settings.mobile_image.height }}"
                    loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                    sizes="100vw"
                    srcset="
                      {{ block.settings.mobile_image | image_url: width: 400 }} 400w,
                      {{ block.settings.mobile_image | image_url: width: 800 }} 800w,
                      {{ block.settings.mobile_image | image_url: width: 1200 }} 1200w
                    "
                  >
                {%- endif -%}
              </div>
            {%- endif -%}
            
            <div class="hero-slide__overlay"></div>
          </div>

          {%- comment -%} Content {%- endcomment -%}
          <div class="hero-slide__content">
            <div class="hero-slide__content-wrapper">
              {%- if block.settings.subheading != blank -%}
                <p class="hero-slide__subheading">
                  {{ block.settings.subheading | escape }}
                </p>
              {%- endif -%}

              {%- if block.settings.heading != blank -%}
                <h1 class="hero-slide__heading">
                  {{ block.settings.heading | escape }}
                </h1>
              {%- endif -%}

              {%- if block.settings.text != blank -%}
                <div class="hero-slide__text rte">
                  {{ block.settings.text }}
                </div>
              {%- endif -%}

              {%- if block.settings.button_1_text != blank or block.settings.button_2_text != blank -%}
                <div class="hero-slide__buttons">
                  {%- if block.settings.button_1_text != blank -%}
                    <a 
                      href="{{ block.settings.button_1_url | default: '#' }}"
                      class="hero-slide__button button button--{{ block.settings.button_1_style }}"
                    >
                      {{ block.settings.button_1_text | escape }}
                    </a>
                  {%- endif -%}

                  {%- if block.settings.button_2_text != blank -%}
                    <a 
                      href="{{ block.settings.button_2_url | default: '#' }}"
                      class="hero-slide__button button button--{{ block.settings.button_2_style }}"
                    >
                      {{ block.settings.button_2_text | escape }}
                    </a>
                  {%- endif -%}
                </div>
              {%- endif -%}
            </div>
          </div>
        </div>
      {%- endfor -%}
    </div>

    {%- if section.blocks.size > 1 -%}
      {%- comment -%} Navigation Controls {%- endcomment -%}
      {%- if section.settings.show_navigation -%}
        <div class="hero-banner__navigation">
          <button 
            class="hero-banner__nav-button hero-banner__nav-button--prev"
            type="button"
            aria-label="{{ 'accessibility.previous' | t }}"
          >
            {% render 'icon-chevron-left' %}
          </button>
          <button 
            class="hero-banner__nav-button hero-banner__nav-button--next"
            type="button"
            aria-label="{{ 'accessibility.next' | t }}"
          >
            {% render 'icon-chevron-right' %}
          </button>
        </div>
      {%- endif -%}

      {%- comment -%} Pagination Dots {%- endcomment -%}
      {%- if section.settings.show_pagination -%}
        <div class="hero-banner__pagination">
          {%- for block in section.blocks -%}
            <button 
              class="hero-banner__pagination-bullet{% if forloop.first %} hero-banner__pagination-bullet--active{% endif %}"
              type="button"
              data-slide-index="{{ forloop.index0 }}"
              aria-label="{{ 'accessibility.slide' | t }} {{ forloop.index }}"
            ></button>
          {%- endfor -%}
        </div>
      {%- endif -%}
    {%- endif -%}
  {%- endif -%}
  
  {%- comment -%} Empty state {%- endcomment -%}
  {%- if section.blocks.size == 0 -%}
    <div class="hero-banner__empty">
      <div class="hero-slide">
        <div class="hero-slide__media">
          <div class="hero-slide__placeholder">
            {{ 'lifestyle-1' | placeholder_svg_tag: 'hero-slide__placeholder-svg' }}
          </div>
        </div>
        <div class="hero-slide__content">
          <div class="hero-slide__content-wrapper">
            <h1 class="hero-slide__heading">{{ 'onboarding.hero.title' | t }}</h1>
            <div class="hero-slide__text">
              <p>{{ 'onboarding.hero.subtitle' | t }}</p>
            </div>
            <div class="hero-slide__buttons">
              <a href="/admin/themes/current/editor?section=hero-banner" class="button button--primary">
                {{ 'onboarding.hero.button' | t }}
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  {%- endif -%}
</hero-banner>

{% schema %}
{
  "name": "Hero banner",
  "class": "shopify-section-hero-banner",
  "tag": "section",
  "max_blocks": 5,
  "settings": [
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "layout",
      "label": "Layout",
