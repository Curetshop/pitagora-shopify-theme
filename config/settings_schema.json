  {
    "name": "Analytics & Tracking",
    "settings": [
      {
        "type": "paragraph", 
        "content": "Connect analytics and tracking tools to understand your customer behavior and optimize conversions."
      },
      {
        "type": "text",
        "id": "google_analytics_4",
        "label": "Google Analytics 4 Measurement ID", 
        "info": "Format: G-XXXXXXXXXX"
      },
      {
        "type": "text",
        "id": "facebook_pixel",
        "label": "Meta Pixel ID",
        "info": "Facebook/Meta Pixel for conversion tracking"
      },
      {
        "type": "text",
        "id": "hotjar_site_id",
        "label": "Hotjar Site ID",
        "info": "For heatmaps and session recordings"
      },
      {
        "type": "checkbox",
        "id": "enhanced_ecommerce",
        "label": "Enhanced E-commerce tracking",
        "default": true,
        "info": "Track detailed purchase and product interaction data"
      }
    ]
  },
  {
    "name": "Performance",
    "settings": [
      {
        "type": "paragraph",
        "content": "Optimize your store's performance and loading speed."
      },
      {
        "type": "checkbox",
        "id": "lazy_loading",
        "label": "Enable lazy loading",
        "default": true,
        "info": "Images load only when they come into view"
      },
      {
        "type": "checkbox",
        "id": "preload_links",
        "label": "Preload important links",
        "default": true,
        "info": "Preload pages on hover for faster navigation"
      },
      {
        "type": "select",
        "id": "image_quality",
        "label": "Image quality",
        "options": [
          {
            "value": "80",
            "label": "High (larger files)"
          },
          {
            "value": "70",
            "label": "Medium (recommended)" 
          },
          {
            "value": "60",
            "label": "Low (smaller files)"
          }
        ],
        "default": "70"
      }
    ]
  },
  {
    "name": "Performance Settings",
    "settings": [
      {
        "type": "paragraph",
        "content": "Configure performance optimization settings for faster loading times."
      },
      {
        "type": "header",
        "content": "CSS Loading"
      },
      {
        "type": "checkbox",
        "id": "enable_critical_css",
        "label": "Enable critical CSS inline",
        "default": true,
        "info": "Loads essential CSS inline for faster rendering"
      },
      {
        "type": "checkbox",
        "id": "enable_css_async_loading",
        "label": "Enable asynchronous CSS loading",
        "default": true,
        "info": "Load non-critical CSS asynchronously"
      },
      {
        "type": "header",
        "content": "JavaScript Optimization"
      },
      {
        "type": "checkbox",
        "id": "enable_script_defer",
        "label": "Defer JavaScript loading",
        "default": true,
        "info": "Defer non-critical JavaScript for better performance"
      },
      {
        "type": "checkbox",
        "id": "enable_lazy_loading",
        "label": "Enable lazy loading",
        "default": true,
        "info": "Load images and components when they enter viewport"
      },
      {
        "type": "header",
        "content": "Caching & Preloading"
      },
      {
        "type": "checkbox",
        "id": "enable_resource_preload",
        "label": "Enable resource preloading",
        "default": true,
        "info": "Preload critical resources like fonts and images"
      },
      {
        "type": "select",
        "id": "cache_strategy",
        "label": "Cache strategy",
        "options": [
          {
            "value": "aggressive",
            "label": "Aggressive (best performance)"
          },
          {
            "value": "balanced",
            "label": "Balanced (recommended)"
          },
          {
            "value": "conservative",
            "label": "Conservative (frequent updates)"
          }
        ],
        "default": "balanced"
      },
      {
        "type": "header",
        "content": "Image Optimization"
      },
      {
        "type": "range",
        "id": "webp_quality",
        "label": "WebP image quality",
        "min": 60,
        "max": 95,
        "step": 5,
        "default": 80,
        "info": "Higher values = better quality, larger file size"
      },
      {
        "type": "checkbox",
        "id": "enable_responsive_images",
        "label": "Enable responsive images",
        "default": true,
        "info": "Serve appropriately sized images based on device"
      }
    ]
  },
  {
    "name": "Security Settings",
    "settings": [
      {
        "type": "paragraph",
        "content": "Configure security features to protect your store and customers."
      },
      {
        "type": "header",
        "content": "Content Security Policy"
      },
      {
        "type": "checkbox",
        "id": "enable_csp",
        "label": "Enable Content Security Policy",
        "default": true,
        "info": "Prevents XSS attacks by restricting resource loading"
      },
      {
        "type": "checkbox",
        "id": "enable_html_sanitization",
        "label": "Enable HTML sanitization",
        "default": true,
        "info": "Automatically sanitize user-generated content"
      },
      {
        "type": "header",
        "content": "Input Validation"
      },
      {
        "type": "checkbox",
        "id": "strict_form_validation",
        "label": "Strict form validation",
        "default": true,
        "info": "Enhanced validation for all form inputs"
      },
      {
        "type": "checkbox",
        "id": "enable_csrf_protection",
        "label": "CSRF protection",
        "default": true,
        "info": "Protect forms against cross-site request forgery"
      },
      {
        "type": "header",
        "content": "Privacy & Data Protection"
      },
      {
        "type": "checkbox",
        "id": "anonymize_user_data",
        "label": "Anonymize user data",
        "default": false,
        "info": "Anonymize user data in analytics and logs"
      },
      {
        "type": "select",
        "id": "cookie_consent_level",
        "label": "Cookie consent level",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "basic",
            "label": "Basic (essential cookies only)"
          },
          {
            "value": "advanced",
            "label": "Advanced (with preferences)"
          }
        ],
        "default": "basic"
      },
      {
        "type": "header",
        "content": "Error Handling"
      },
      {
        "type": "checkbox",
        "id": "hide_error_details",
        "label": "Hide error details in production",
        "default": true,
        "info": "Prevents exposure of sensitive error information"
      },
      {
        "type": "select",
        "id": "error_reporting_level",
        "label": "Error reporting level",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "errors",
            "label": "Errors only"
          },
          {
            "value": "warnings",
            "label": "Errors and warnings"
          },
          {
            "value": "all",
            "label": "All (debug mode)"
          }
        ],
        "default": "errors"
      }
    ]
  },
  {
    "name": "Advanced Features",
    "settings": [
      {
        "type": "paragraph",
        "content": "Configure advanced AI and voice features."
      },
      {
        "type": "header",
        "content": "AI Recommendations"
      },
      {
        "type": "checkbox",
        "id": "enable_ai_recommendations",
