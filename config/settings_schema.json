[
  {
    "name": "theme_info",
    "theme_name": "Pitagora",
    "theme_author": "Enterprise Hybrid",
    "theme_version": "1.0.0",
    "theme_documentation_url": "https://github.com/pitagora-theme/docs",
    "theme_support_url": "https://github.com/Curetshop/pitagora-shopify-theme/issues"
  },
  {
    "name": "Colors",
    "settings": [
      {
        "type": "color_scheme_group",
        "id": "color_schemes",
        "role": {
          "type": "color_scheme_group"
        },
        "definition": [
          {
            "type": "color",
            "id": "colors_solid_button_labels",
            "label": "Solid button label",
            "default": "#FFFFFF"
          },
          {
            "type": "color", 
            "id": "colors_accent_1",
            "label": "Primary accent",
            "default": "#121212"
          },
          {
            "type": "color_background",
            "id": "gradient_accent_1", 
            "label": "Primary accent gradient"
          },
          {
            "type": "color",
            "id": "colors_accent_2", 
            "label": "Secondary accent",
            "default": "#334FB4"
          },
          {
            "type": "color_background",
            "id": "gradient_accent_2",
            "label": "Secondary accent gradient" 
          },
          {
            "type": "color",
            "id": "colors_text",
            "label": "Text",
            "default": "#121212"
          },
          {
            "type": "color",
            "id": "colors_outline_button_labels",
            "label": "Outline button label", 
            "default": "#121212"
          },
          {
            "type": "color",
            "id": "colors_background_1",
            "label": "Primary background",
            "default": "#FFFFFF"
          },
          {
            "type": "color_background", 
            "id": "gradient_background_1",
            "label": "Primary background gradient"
          },
          {
            "type": "color",
            "id": "colors_background_2",
            "label": "Secondary background", 
            "default": "#F3F3F3"
          },
          {
            "type": "color_background",
            "id": "gradient_background_2",
            "label": "Secondary background gradient"
          }
        ]
      }
    ]
  },
  {
    "name": "Typography", 
    "settings": [
      {
        "type": "paragraph",
        "content": "Choose fonts that reflect your brand personality. Font loading is optimized for performance."
      },
      {
        "type": "font_picker",
        "id": "heading_font",
        "label": "Heading font",
        "default": "assistant_n4",
        "info": "Used for headings and titles"
      },
      {
        "type": "range",
        "id": "heading_font_scale",
        "min": 100,
        "max": 150,
        "step": 5,
        "unit": "%",
        "label": "Heading font scale",
        "default": 120
      },
      {
        "type": "font_picker",
        "id": "body_font",
        "label": "Body font",
        "default": "assistant_n4",
        "info": "Used for body text and paragraphs"
      },
      {
        "type": "range",
        "id": "body_font_scale",
        "min": 90,
        "max": 120,
        "step": 5,
        "unit": "%",
        "label": "Body font scale",
        "default": 100
      }
    ]
  },
  {
    "name": "Layout & Appearance",
    "settings": [
      {
        "type": "paragraph",
        "content": "Control the overall appearance and spacing of your theme elements."
      },
      {
        "type": "range",
        "id": "buttons_radius",
        "min": 0,
        "max": 20,
        "step": 2,
        "unit": "px",
        "label": "Button corner radius",
        "default": 8
      },
      {
        "type": "select",
        "id": "page_width",
        "label": "Page width",
        "options": [
          {
            "value": "1200",
            "label": "Narrow (1200px)"
          },
          {
            "value": "1400", 
            "label": "Standard (1400px)"
          },
          {
            "value": "1600",
            "label": "Wide (1600px)"
          }
        ],
        "default": "1400"
      },
      {
        "type": "checkbox",
        "id": "animations_enabled",
        "label": "Enable animations",
        "default": true,
        "info": "Smooth transitions and hover effects"
      },
      {
        "type": "range",
        "id": "card_corner_radius",
        "min": 0,
        "max": 20,
        "step": 2,
        "unit": "px",
        "label": "Card corner radius",
        "default": 12
      },
      {
        "type": "range",
        "id": "spacing_sections",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "Section spacing",
        "default": 60,
        "info": "Vertical space between sections"
      }
    ]
  },
  {
    "name": "Header",
    "settings": [
      {
        "type": "image_picker",
        "id": "logo",
        "label": "Logo image"
      },
      {
        "type": "range",
        "id": "logo_width",
        "min": 80,
        "max": 250,
        "step": 10,
        "unit": "px",
        "label": "Logo width",
        "default": 150
      },
      {
        "type": "text",
        "id": "logo_text",
        "label": "Store name (fallback)",
        "info": "Displayed when no logo image is uploaded",
        "default": "{{ shop.name }}"
      },
      {
        "type": "checkbox",
        "id": "sticky_header",
        "label": "Sticky header",
        "default": true,
        "info": "Header stays visible when scrolling"
      },
      {
        "type": "checkbox",
        "id": "predictive_search",
        "label": "Enable predictive search",
        "default": true,
        "info": "Show search suggestions as user types"
      },
      {
        "type": "checkbox",
        "id": "cart_drawer",
        "label": "Cart drawer",
        "default": true,
        "info": "Open cart in sliding drawer instead of page"
      }
    ]
  },
  {
    "name": "Product pages",
    "settings": [
      {
        "type": "paragraph",
        "content": "Customize how products are displayed and behave on product pages."
      },
      {
        "type": "select",
        "id": "product_image_layout",
        "label": "Product image layout",
        "options": [
          {
            "value": "grid",
            "label": "Grid"
          },
          {
            "value": "slider",
            "label": "Slider"
          },
          {
            "value": "stack",
            "label": "Stacked"
          }
        ],
        "default": "slider"
      },
      {
        "type": "checkbox",
        "id": "enable_zoom",
        "label": "Enable image zoom",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "enable_quick_view",
        "label": "Enable quick view",
        "default": true,
        "info": "Allow customers to preview products in modal"
      },
      {
        "type": "checkbox",
        "id": "show_vendor",
        "label": "Show product vendor",
        "default": true
      },
      {
        "type": "checkbox", 
        "id": "show_sku",
        "label": "Show SKU",
        "default": false
      },
      {
        "type": "checkbox",
        "id": "enable_reviews",
        "label": "Enable product reviews",
        "default": true
      }
    ]
  },
  {
    "name": "Collection pages",
    "settings": [
      {
        "type": "paragraph",
        "content": "Control how products are displayed in collections and search results."
      },
      {
        "type": "range",
        "id": "products_per_page",
        "min": 12,
        "max": 48,
        "step": 4,
        "label": "Products per page",
        "default": 24
      },
      {
        "type": "select",
        "id": "collection_layout",
        "label": "Product grid layout",
        "options": [
          {
            "value": "2",
            "label": "2 columns"
          },
          {
            "value": "3", 
            "label": "3 columns"
          },
          {
            "value": "4",
            "label": "4 columns"
          }
        ],
        "default": "3"
      },
      {
        "type": "checkbox",
        "id": "enable_filtering",
        "label": "Enable filtering",
        "default": true,
        "info": "Allow customers to filter products by price, color, etc."
      },
      {
        "type": "checkbox",
        "id": "enable_sorting",
        "label": "Enable sorting",
        "default": true
      },
      {
        "type": "select",
        "id": "product_hover_effect",
        "label": "Product hover effect",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "second_image",
            "label": "Show second image"
          },
          {
            "value": "quick_view",
            "label": "Show quick view button"
          }
        ],
        "default": "second_image"
      }
    ]
  },
  {
    "name": "Cart",
    "settings": [
      {
        "type": "paragraph",
        "content": "Configure cart behavior and promotional features."
      },
      {
        "type": "number",
        "id": "free_shipping_threshold",
        "label": "Free shipping threshold",
        "info": "Minimum order amount for free shipping (number only)"
      },
      {
        "type": "textarea",
        "id": "cart_message",
        "label": "Cart message",
        "info": "Message displayed in cart drawer/page"
      },
      {
        "type": "checkbox",
        "id": "cart_recommendations",
        "label": "Show recommended products",
        "default": true
      },
      {
        "type": "checkbox",
        "id": "cart_notes",
        "label": "Enable cart notes",
        "default": true,
        "info": "Allow customers to add notes to their order"
      }
    ]
  },
  {
    "name": "Social media",
    "settings": [
      {
        "type": "paragraph",
        "content": "Connect your social media accounts for sharing and displaying social proof."
      },
      {
        "type": "text",
        "id": "social_twitter",
        "label": "Twitter/X URL",
        "info": "https://twitter.com/yourhandle"
      },
      {
        "type": "text",
        "id": "social_facebook", 
        "label": "Facebook URL",
        "info": "https://facebook.com/yourpage"
      },
      {
        "type": "text",
        "id": "social_instagram",
        "label": "Instagram URL", 
        "info": "https://instagram.com/yourhandle"
      },
      {
        "type": "text",
        "id": "social_youtube",
        "label": "YouTube URL",
        "info": "https://youtube.com/yourchannel"
      },
      {
        "type": "text",
        "id": "social_tiktok",
        "label": "TikTok URL",
        "info": "https://tiktok.com/@yourhandle"
      },
      {
        "type": "checkbox",
        "id": "enable_social_sharing",
        "label": "Enable social sharing",
        "default": true,
        "info": "Show social sharing buttons on product pages"
      }
    ]
  },
  {
    "name": "Analytics & Tracking",
    "settings": [
      {
        "type": "paragraph", 
        "content": "Connect analytics and tracking tools to understand your customer behavior and optimize conversions."
      },
      {
        "type": "text",
        "id": "google_analytics_4",
        "label": "Google Analytics 4 Measurement ID", 
        "info": "Format: G-XXXXXXXXXX"
      },
      {
        "type": "text",
        "id": "facebook_pixel",
        "label": "Meta Pixel ID",
        "info": "Facebook/Meta Pixel for conversion tracking"
      },
      {
        "type": "text",
        "id": "hotjar_site_id",
        "label": "Hotjar Site ID",
        "info": "For heatmaps and session recordings"
      },
      {
        "type": "checkbox",
        "id": "enhanced_ecommerce",
        "label": "Enhanced E-commerce tracking",
        "default": true,
        "info": "Track detailed purchase and product interaction data"
      }
    ]
  },
  {
    "name": "Performance",
    "settings": [
      {
        "type": "paragraph",
        "content": "Optimize your store's performance and loading speed. These settings directly impact Core Web Vitals and SEO rankings."
      },
      {
        "type": "header",
        "content": "CSS Loading"
      },
      {
        "type": "checkbox",
        "id": "enable_critical_css",
        "label": "Enable critical CSS inline",
        "default": true,
        "info": "Loads essential CSS inline for faster rendering"
      },
      {
        "type": "checkbox",
        "id": "enable_css_async_loading",
        "label": "Enable asynchronous CSS loading",
        "default": true,
        "info": "Load non-critical CSS asynchronously"
      },
      {
        "type": "header",
        "content": "JavaScript Optimization"
      },
      {
        "type": "checkbox",
        "id": "enable_script_defer",
        "label": "Defer JavaScript loading",
        "default": true,
        "info": "Defer non-critical JavaScript for better performance"
      },
      {
        "type": "checkbox",
        "id": "enable_lazy_loading",
        "label": "Enable lazy loading",
        "default": true,
        "info": "Load images and components when they enter viewport (improves LCP)"
      },
      {
        "type": "checkbox",
        "id": "preload_links",
        "label": "Preload important links",
        "default": true,
        "info": "Preload pages on hover for faster navigation"
      },
      {
        "type": "select",
        "id": "image_quality",
        "label": "Default image quality",
        "options": [
          {
            "value": "85",
            "label": "High quality (larger files)"
          },
          {
            "value": "75",
            "label": "Balanced (recommended)"
          },
          {
            "value": "65",
            "label": "Optimized (smaller files)"
          }
        ],
        "default": "75"
      },
      {
        "type": "header",
        "content": "Caching & Preloading"
      },
      {
        "type": "checkbox",
        "id": "enable_resource_preload",
        "label": "Enable resource preloading",
        "default": true,
        "info": "Preload critical resources like fonts and images"
      },
      {
        "type": "select",
        "id": "cache_strategy",
        "label": "Cache strategy",
        "options": [
          {
            "value": "aggressive",
            "label": "Aggressive (best performance)"
          },
          {
            "value": "balanced",
            "label": "Balanced (recommended)"
          },
          {
            "value": "conservative",
            "label": "Conservative (frequent updates)"
          }
        ],
        "default": "balanced"
      },
      {
        "type": "header",
        "content": "Image Optimization"
      },
      {
        "type": "range",
        "id": "webp_quality",
        "label": "WebP image quality",
        "min": 65,
        "max": 90,
        "step": 5,
        "default": 80,
        "info": "WebP quality setting (65-90). Higher = better quality but larger files"
      },
      {
        "type": "checkbox",
        "id": "enable_responsive_images",
        "label": "Enable responsive images",
        "default": true,
        "info": "Serve appropriately sized images based on device"
      }
    ]
  },
  {
    "name": "Advanced Features",
    "settings": [
      {
        "type": "paragraph",
        "content": "Configure advanced AI and voice features."
      },
      {
        "type": "header",
        "content": "AI Recommendations"
      },
      {
        "type": "checkbox",
        "id": "enable_ai_recommendations",
        "label": "Enable AI product recommendations",
        "default": true,
        "info": "Machine learning powered product suggestions"
      },
      {
        "type": "range",
        "id": "ai_recommendation_count",
        "label": "Number of AI recommendations",
        "min": 4,
        "max": 12,
        "step": 2,
        "default": 8
      },
      {
        "type": "select",
        "id": "ai_recommendation_algorithm",
        "label": "Recommendation strategy",
        "options": [
          {
            "value": "collaborative",
            "label": "Customer behavior based"
          },
          {
            "value": "content_based",
            "label": "Product similarity based"
          },
          {
            "value": "hybrid",
            "label": "Smart hybrid (recommended)"
          }
        ],
        "default": "collaborative"
      },
      {
        "type": "header",
        "content": "Voice Search"
      },
      {
        "type": "checkbox",
        "id": "enable_voice_search",
        "label": "Enable voice search",
        "default": true,
        "info": "Allow customers to search using voice commands"
      },
      {
        "type": "select",
        "id": "voice_search_language",
        "label": "Voice search language",
        "options": [
          {
            "value": "en-US",
            "label": "English (US)"
          },
          {
            "value": "es-ES",
            "label": "Spanish (Spain)"
          },
          {
            "value": "es-MX",
            "label": "Spanish (Mexico)"
          },
          {
            "value": "fr-FR",
            "label": "French"
          },
          {
            "value": "de-DE",
            "label": "German"
          }
        ],
        "default": "en-US"
      },
      {
        "type": "range",
        "id": "voice_search_confidence",
        "label": "Voice recognition confidence threshold",
        "min": 50,
        "max": 90,
        "step": 5,
        "default": 70,
        "info": "Lower values = more permissive, higher values = more accurate"
      },
      {
        "type": "header",
        "content": "Product Siblings"
      },
      {
        "type": "checkbox",
        "id": "enable_product_siblings",
        "label": "Enable product siblings",
        "default": true,
        "info": "Show related products and variants"
      },
      {
        "type": "range",
        "id": "product_siblings_count",
        "label": "Number of product siblings",
        "min": 3,
        "max": 10,
        "step": 1,
        "default": 6
      }
    ]
  },
  {
    "name": "Advanced & Developer",
    "settings": [
      {
        "type": "paragraph",
        "content": "⚠️ Advanced settings for experienced users and developers. Modify with caution."
      },
      {
        "type": "header",
        "content": "Security & Privacy"
      },
      {
        "type": "checkbox",
        "id": "enable_csp",
        "label": "Content Security Policy",
        "default": true,
        "info": "Enhanced security - prevents XSS attacks"
      },
      {
        "type": "select",
        "id": "cookie_consent_level",
        "label": "Cookie consent",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "basic",
            "label": "Basic (GDPR compliant)"
          },
          {
            "value": "advanced",
            "label": "Advanced (with preferences)"
          }
        ],
        "default": "basic"
      },
      {
        "type": "header",
        "content": "Debug & Development"
      },
      {
        "type": "checkbox",
        "id": "debug_mode",
        "label": "Debug mode",
        "default": false,
        "info": "⚠️ Enable only for development - shows debug information"
      },
      {
        "type": "checkbox",
        "id": "show_performance_metrics",
        "label": "Show performance metrics",
        "default": false,
        "info": "Display Core Web Vitals in browser console"
      },
      {
        "type": "header",
        "content": "Custom Code"
      },
      {
        "type": "textarea",
        "id": "custom_css",
        "label": "Custom CSS",
        "info": "Advanced: Add custom styles (loaded after theme CSS)"
      },
      {
        "type": "textarea",
        "id": "custom_js",
        "label": "Custom JavaScript",
        "info": "Advanced: Add custom JS (executed after theme scripts)"
      },
      {
        "type": "textarea",
        "id": "custom_head_code",
        "label": "Custom <head> code",
        "info": "Expert: HTML/JS inserted in <head> section"
      }
    ]
  },
  {
    "name": "Favicon",
    "settings": [
      {
        "type": "image_picker",
        "id": "favicon",
        "label": "Favicon",
        "info": "32x32px PNG recommended"
      }
    ]
  }
]